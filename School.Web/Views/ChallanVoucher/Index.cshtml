@{
    ViewData["Title"] = "Fee Challans";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<style>
    .card {
        border: none;
        border-radius: 16px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
        margin-bottom: 24px;
    }

    .card-header {
        background: white;
        border-bottom: 1px solid #e2e8f0;
        padding: 20px 24px;
        border-radius: 16px 16px 0 0 !important;
    }

    .card-header h5 {
        margin: 0;
        font-weight: 600;
        color: #1e293b;
    }

    .card-body {
        padding: 24px;
    }

    .form-label {
        font-weight: 500;
        color: #475569;
        margin-bottom: 8px;
        font-size: 14px;
    }

    .form-control, .form-select {
        border: 2px solid #e2e8f0;
        border-radius: 10px;
        padding: 10px 14px;
        font-size: 14px;
        transition: all 0.2s;
    }

    .form-control:focus, .form-select:focus {
        border-color: #008649;
        box-shadow: 0 0 0 4px rgba(0, 134, 73, 0.1);
    }

    .btn-primary {
        background: linear-gradient(135deg, #008649 0%, #006d3b 100%);
        border: none;
        border-radius: 10px;
        padding: 10px 20px;
        font-weight: 600;
        font-size: 14px;
    }

    .btn-secondary {
        background: #f1f5f9;
        border: 2px solid #e2e8f0;
        border-radius: 10px;
        padding: 10px 20px;
        font-weight: 600;
        font-size: 14px;
        color: #64748b;
    }

    .btn-info {
        background: linear-gradient(135deg, #0ea5e9 0%, #0284c7 100%);
        border: none;
        border-radius: 10px;
        color: white;
    }

    .btn-success {
        background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
        border: none;
        border-radius: 10px;
        color: white;
    }

    .btn-warning {
        background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
        border: none;
        border-radius: 10px;
        color: white;
    }

    .btn-danger {
        background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        border: none;
        border-radius: 10px;
        color: white;
    }

    .table {
        margin-bottom: 0;
    }

    .table thead th {
        background: #f8fafc;
        border-bottom: 2px solid #e2e8f0;
        padding: 14px 16px;
        font-weight: 600;
        font-size: 13px;
        color: #475569;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        white-space: nowrap;
    }

    .table tbody td {
        padding: 12px 16px;
        vertical-align: middle;
        border-bottom: 1px solid #f1f5f9;
        font-size: 14px;
    }

    .table tbody tr:hover {
        background: #f8fafc;
    }

    .alert {
        border-radius: 12px;
        border: none;
        padding: 16px 20px;
    }

    .loading-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(255, 255, 255, 0.8);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 100;
        border-radius: 16px;
    }

    .spinner-border {
        width: 3rem;
        height: 3rem;
        border-width: 0.3rem;
    }

    .filter-section {
        background: #f8fafc;
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 20px;
    }

    .filter-section-title {
        font-size: 14px;
        font-weight: 600;
        color: #64748b;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 16px;
        padding-bottom: 8px;
        border-bottom: 2px solid #e2e8f0;
    }

    .grid-section {
        margin-top: 24px;
    }

    .grid-section-title {
        font-size: 14px;
        font-weight: 600;
        color: #64748b;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 16px;
        padding-bottom: 8px;
        border-bottom: 2px solid #e2e8f0;
    }

    .status-pending { color: #f59e0b; font-weight: 600; }
    .status-partiallypaid { color: #0284c7; font-weight: 600; }
    .status-paid { color: #16a34a; font-weight: 600; }
    .status-cancelled { color: #dc2626; font-weight: 600; }
    .status-overdue { color: #7c3aed; font-weight: 600; }

    .currency {
        font-family: 'Courier New', monospace;
        text-align: right;
    }
</style>

<div class="container-fluid">
    <!-- Alert Messages -->
    <div id="alertContainer"></div>

    <!-- Challan Card -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5><i class="bi bi-receipt me-2"></i>Fee Challans</h5>
            <a href="/challan/form" class="btn btn-primary">
                <i class="bi bi-plus-lg me-1"></i> Create Challan
            </a>
        </div>
        <div class="card-body position-relative">
            <div id="loadingOverlay" class="loading-overlay" style="display: none;">
                <div class="spinner-border text-success" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>

            <!-- Filter Section -->
            <div class="filter-section">
                <div class="filter-section-title">
                    <i class="bi bi-funnel me-2"></i>Filter Challans
                </div>
                <div class="row g-3">
                    <div class="col-md-2">
                        <label for="filterSession" class="form-label">Session</label>
                        <select class="form-select" id="filterSession">
                            <option value="">All Sessions</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label for="filterClass" class="form-label">Class</label>
                        <select class="form-select" id="filterClass">
                            <option value="">All Classes</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label for="filterSection" class="form-label">Section</label>
                        <select class="form-select" id="filterSection">
                            <option value="">All Sections</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label for="filterStatus" class="form-label">Status</label>
                        <select class="form-select" id="filterStatus">
                            <option value="">All Status</option>
                            <option value="1">Pending</option>
                            <option value="2">Partially Paid</option>
                            <option value="3">Paid</option>
                            <option value="4">Cancelled</option>
                            <option value="5">Overdue</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label for="searchText" class="form-label">Search</label>
                        <input type="text" class="form-control" id="searchText" placeholder="Challan #, Name..." />
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="button" class="btn btn-primary me-2" onclick="loadChallans()">
                            <i class="bi bi-search me-1"></i> Search
                        </button>
                        <button type="button" class="btn btn-secondary" onclick="clearFilters()">
                            <i class="bi bi-x-lg"></i>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Grid Section -->
            <div class="grid-section">
                <div class="grid-section-title">
                    <i class="bi bi-table me-2"></i>Fee Challan Records
                </div>
                <div class="table-responsive">
                    <table class="table table-hover" id="challansTable">
                        <thead>
                            <tr>
                                <th style="width: 60px;">Sr#</th>
                                <th>Challan #</th>
                                <th>Student</th>
                                <th>Class</th>
                                <th>Issue Date</th>
                                <th>Due Date</th>
                                <th class="text-end">Total</th>
                                <th class="text-end">Paid</th>
                                <th class="text-end">Balance</th>
                                <th class="text-center">Status</th>
                                <th class="text-center" style="width: 150px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody id="challansBody">
                            <!-- Challan records will be loaded dynamically -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const API_BASE = 'http://localhost:5266/api';
        let allChallans = [];

        $(document).ready(function () {
            loadDropdowns();
            loadChallans();
        });

        async function loadDropdowns() {
            try {
                const [sessions, classes, sections] = await Promise.all([
                    fetch(`${API_BASE}/Session/dropdown`).then(r => r.json()).catch(() => []),
                    fetch(`${API_BASE}/Class/dropdown`).then(r => r.json()).catch(() => []),
                    fetch(`${API_BASE}/Section/dropdown`).then(r => r.json()).catch(() => [])
                ]);

                populateDropdown('filterSession', sessions, 'id', 'sessionName');
                populateDropdown('filterClass', classes, 'id', 'name');
                populateDropdown('filterSection', sections, 'id', 'name');
            } catch (error) {
                console.error('Error loading dropdowns:', error);
            }
        }

        function populateDropdown(elementId, data, valueField, textField) {
            const select = $(`#${elementId}`);
            select.find('option:not(:first)').remove();
            data.forEach(item => {
                select.append(`<option value="${item[valueField]}">${item[textField]}</option>`);
            });
        }

        async function loadChallans() {
            showLoading();
            try {
                const classId = $('#filterClass').val();
                const sectionId = $('#filterSection').val();
                const sessionId = $('#filterSession').val();

                let url = `${API_BASE}/ChallanVoucher`;
                if (classId && sectionId && sessionId) {
                    url = `${API_BASE}/ChallanVoucher/class/${classId}/section/${sectionId}/session/${sessionId}`;
                }

                const response = await fetch(url);
                if (response.ok) {
                    allChallans = await response.json();
                    applyFilters();
                } else {
                    showAlert('Failed to load challans', 'danger');
                }
            } catch (error) {
                console.error('Error loading challans:', error);
                showAlert('Error loading challans: ' + error.message, 'danger');
            } finally {
                hideLoading();
            }
        }

        function applyFilters() {
            let filtered = [...allChallans];

            const status = $('#filterStatus').val();
            const searchText = $('#searchText').val().toLowerCase();

            if (status) {
                filtered = filtered.filter(c => c.status == status);
            }

            if (searchText) {
                filtered = filtered.filter(c =>
                    c.challanNumber.toLowerCase().includes(searchText) ||
                    (c.studentName && c.studentName.toLowerCase().includes(searchText)) ||
                    (c.rollNumber && c.rollNumber.toLowerCase().includes(searchText))
                );
            }

            renderList(filtered);
        }

        function renderList(items) {
            const tbody = $('#challansBody');
            tbody.empty();

            if (items.length === 0) {
                tbody.html('<tr><td colspan="11" class="text-center text-muted py-4">No challan records found.</td></tr>');
                return;
            }

            items.forEach((item, index) => {
                const statusClass = `status-${item.statusName.toLowerCase().replace(' ', '')}`;
                const row = `
                    <tr data-id="${item.id}">
                        <td>${index + 1}</td>
                        <td><strong>${item.challanNumber}</strong></td>
                        <td>
                            ${item.studentName}<br>
                            <small class="text-muted">${item.rollNumber || ''}</small>
                        </td>
                        <td>${item.className} - ${item.sectionName}</td>
                        <td>${formatDate(item.issueDate)}</td>
                        <td>${formatDate(item.dueDate)}</td>
                        <td class="text-end currency">${formatCurrency(item.totalAmount)}</td>
                        <td class="text-end currency text-success">${formatCurrency(item.paidAmount)}</td>
                        <td class="text-end currency fw-bold text-danger">${formatCurrency(item.balanceAmount)}</td>
                        <td class="text-center">
                            <span class="${statusClass}">${item.statusName}</span>
                        </td>
                        <td class="text-center">
                            <button type="button" class="btn btn-sm btn-warning me-1" onclick="printChallan(${item.id})" title="Print">
                                <i class="bi bi-printer"></i>
                            </button>
                            <button type="button" class="btn btn-sm btn-info me-1" onclick="editChallan(${item.id})" title="Edit">
                                <i class="bi bi-pencil"></i>
                            </button>
                            <button type="button" class="btn btn-sm btn-danger" onclick="deleteChallan(${item.id})" title="Delete">
                                <i class="bi bi-trash"></i>
                            </button>
                        </td>
                    </tr>
                `;
                tbody.append(row);
            });
        }

        function formatDate(dateString) {
            const date = new Date(dateString);
            return date.toLocaleDateString('en-GB', { day: '2-digit', month: 'short', year: 'numeric' });
        }

        function formatCurrency(amount) {
            return new Intl.NumberFormat('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 }).format(amount || 0);
        }

        function printChallan(id) {
            window.open(`/challan/print/${id}`, '_blank');
        }

        function editChallan(id) {
            window.location.href = `/challan/form/${id}`;
        }

        async function deleteChallan(id) {
            if (!confirm('Are you sure you want to delete this challan?')) {
                return;
            }

            showLoading();
            try {
                const response = await fetch(`${API_BASE}/ChallanVoucher/${id}`, {
                    method: 'DELETE'
                });

                if (response.ok) {
                    showAlert('Challan deleted successfully!', 'success');
                    await loadChallans();
                } else {
                    showAlert('Failed to delete challan', 'danger');
                }
            } catch (error) {
                showAlert('Error deleting challan: ' + error.message, 'danger');
            } finally {
                hideLoading();
            }
        }

        function clearFilters() {
            $('#filterSession').val('');
            $('#filterClass').val('');
            $('#filterSection').val('');
            $('#filterStatus').val('');
            $('#searchText').val('');
            loadChallans();
        }

        function showLoading() {
            $('#loadingOverlay').show();
        }

        function hideLoading() {
            $('#loadingOverlay').hide();
        }

        function showAlert(message, type) {
            if (type === 'success') {
                toastSuccess(message);
            } else if (type === 'danger' || type === 'error') {
                toastError(message);
            } else if (type === 'warning') {
                toastWarning(message);
            } else {
                toastInfo(message);
            }
        }
    </script>
}
