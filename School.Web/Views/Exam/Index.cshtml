@{
    ViewData["Title"] = "Exams";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<style>
    .card {
        border: none;
        border-radius: 16px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
        margin-bottom: 24px;
    }

    .card-header {
        background: white;
        border-bottom: 1px solid #e2e8f0;
        padding: 20px 24px;
        border-radius: 16px 16px 0 0 !important;
    }

    .card-header h5 {
        margin: 0;
        font-weight: 600;
        color: #1e293b;
    }

    .card-body {
        padding: 24px;
    }

    .form-label {
        font-weight: 500;
        color: #475569;
        margin-bottom: 8px;
        font-size: 14px;
    }

    .form-control, .form-select {
        border: 2px solid #e2e8f0;
        border-radius: 10px;
        padding: 10px 14px;
        font-size: 14px;
        transition: all 0.2s;
    }

    .form-control:focus, .form-select:focus {
        border-color: #008649;
        box-shadow: 0 0 0 4px rgba(0, 134, 73, 0.1);
    }

    .form-check-input {
        width: 18px;
        height: 18px;
        border: 2px solid #cbd5e1;
        border-radius: 4px;
        cursor: pointer;
    }

    .form-check-input:checked {
        background-color: #008649;
        border-color: #008649;
    }

    .btn-primary {
        background: linear-gradient(135deg, #008649 0%, #006d3b 100%);
        border: none;
        border-radius: 10px;
        padding: 10px 20px;
        font-weight: 600;
        font-size: 14px;
        transition: all 0.2s;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(0, 134, 73, 0.4);
    }

    .btn-secondary {
        background: #f1f5f9;
        border: 2px solid #e2e8f0;
        border-radius: 10px;
        padding: 10px 20px;
        font-weight: 600;
        font-size: 14px;
        color: #64748b;
    }

    .btn-info {
        background: linear-gradient(135deg, #0ea5e9 0%, #0284c7 100%);
        border: none;
        border-radius: 10px;
        color: white;
    }

    .btn-warning {
        background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
        border: none;
        border-radius: 10px;
        color: white;
    }

    .btn-danger {
        background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        border: none;
        border-radius: 10px;
        color: white;
    }

    .table {
        margin-bottom: 0;
    }

    .table thead th {
        background: #f8fafc;
        border-bottom: 2px solid #e2e8f0;
        padding: 14px 16px;
        font-weight: 600;
        font-size: 13px;
        color: #475569;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        white-space: nowrap;
    }

    .table tbody td {
        padding: 12px 16px;
        vertical-align: middle;
        border-bottom: 1px solid #f1f5f9;
        font-size: 14px;
    }

    .table tbody tr:hover {
        background: #f8fafc;
    }

    .table tbody tr.selected {
        background: #ecfdf5;
        border-left: 3px solid #008649;
    }

    .alert {
        border-radius: 12px;
        border: none;
        padding: 16px 20px;
    }

    .loading-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(255, 255, 255, 0.8);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 100;
        border-radius: 16px;
    }

    .spinner-border {
        width: 3rem;
        height: 3rem;
        border-width: 0.3rem;
    }

    .form-section {
        background: #f8fafc;
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 20px;
    }

    .form-section-title {
        font-size: 14px;
        font-weight: 600;
        color: #64748b;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 16px;
        padding-bottom: 8px;
        border-bottom: 2px solid #e2e8f0;
    }

    .grid-section {
        margin-top: 24px;
    }

    .grid-section-title {
        font-size: 14px;
        font-weight: 600;
        color: #64748b;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 16px;
        padding-bottom: 8px;
        border-bottom: 2px solid #e2e8f0;
    }

    .status-scheduled { color: #0284c7; }
    .status-inprogress { color: #ea580c; }
    .status-completed { color: #16a34a; }
    .status-cancelled { color: #dc2626; }
</style>

<div class="container-fluid">
    <!-- Alert Messages -->
    <div id="alertContainer"></div>

    <!-- Exams Card -->
    <div class="card">
        <div class="card-header">
            <h5><i class="bi bi-journal-text me-2"></i>Exam Management</h5>
        </div>
        <div class="card-body position-relative">
            <div id="loadingOverlay" class="loading-overlay" style="display: none;">
                <div class="spinner-border text-success" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>

            <!-- Form Section -->
            <div class="form-section">
                <div class="form-section-title">
                    <i class="bi bi-pencil-square me-2"></i><span id="formTitle">Add New Exam</span>
                </div>
                <form id="examForm">
                    <input type="hidden" id="examId" value="0" />

                    <div class="row g-3">
                        <div class="col-md-3">
                            <label for="examName" class="form-label">Exam Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="examName" placeholder="e.g., Mid Term Exam" required />
                        </div>
                        <div class="col-md-2">
                            <label for="examType" class="form-label">Exam Type <span class="text-danger">*</span></label>
                            <select class="form-select" id="examType" required>
                                <option value="1">Monthly</option>
                                <option value="2">Mid Term</option>
                                <option value="3">Final</option>
                                <option value="4">Quiz</option>
                                <option value="5">Assignment</option>
                                <option value="6">Practical</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label for="sessionId" class="form-label">Session <span class="text-danger">*</span></label>
                            <select class="form-select" id="sessionId" required>
                                <option value="">Select Session</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label for="classId" class="form-label">Class <span class="text-danger">*</span></label>
                            <select class="form-select" id="classId" required>
                                <option value="">Select Class</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="subjectId" class="form-label">Subject <span class="text-danger">*</span></label>
                            <select class="form-select" id="subjectId" required>
                                <option value="">Select Subject</option>
                            </select>
                        </div>
                    </div>

                    <div class="row g-3 mt-1">
                        <div class="col-md-2">
                            <label for="examDate" class="form-label">Exam Date <span class="text-danger">*</span></label>
                            <input type="date" class="form-control" id="examDate" required />
                        </div>
                        <div class="col-md-2">
                            <label for="startTime" class="form-label">Start Time</label>
                            <input type="time" class="form-control" id="startTime" />
                        </div>
                        <div class="col-md-2">
                            <label for="endTime" class="form-label">End Time</label>
                            <input type="time" class="form-control" id="endTime" />
                        </div>
                        <div class="col-md-1">
                            <label for="totalMarks" class="form-label">Total <span class="text-danger">*</span></label>
                            <input type="number" class="form-control" id="totalMarks" value="100" required />
                        </div>
                        <div class="col-md-1">
                            <label for="passingMarks" class="form-label">Passing <span class="text-danger">*</span></label>
                            <input type="number" class="form-control" id="passingMarks" value="40" required />
                        </div>
                        <div class="col-md-2">
                            <label for="status" class="form-label">Status</label>
                            <select class="form-select" id="status">
                                <option value="1">Scheduled</option>
                                <option value="2">In Progress</option>
                                <option value="3">Completed</option>
                                <option value="4">Cancelled</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">&nbsp;</label>
                            <div class="d-flex gap-2">
                                <button type="button" class="btn btn-primary" onclick="saveExam()">
                                    <i class="bi bi-check-lg me-1"></i> Save
                                </button>
                                <button type="button" class="btn btn-secondary" onclick="resetForm()">
                                    <i class="bi bi-x-lg me-1"></i> Clear
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

            <!-- Grid Section -->
            <div class="grid-section">
                <div class="grid-section-title">
                    <i class="bi bi-table me-2"></i>Exams List
                </div>
                <div class="table-responsive">
                    <table class="table table-hover" id="examsTable">
                        <thead>
                            <tr>
                                <th style="width: 60px;">Sr#</th>
                                <th>Exam Name</th>
                                <th>Type</th>
                                <th>Class</th>
                                <th>Subject</th>
                                <th>Date</th>
                                <th class="text-center">Marks</th>
                                <th class="text-center">Status</th>
                                <th class="text-center" style="width: 180px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody id="examsBody">
                            <!-- Exams will be loaded dynamically -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const API_BASE = 'http://localhost:5266/api';
        let editingId = 0;

        $(document).ready(function () {
            loadDropdowns();
            loadExams();
        });

        async function loadDropdowns() {
            try {
                const [sessions, classes, subjects] = await Promise.all([
                    fetch(`${API_BASE}/Session/dropdown`).then(r => r.json()).catch(() => []),
                    fetch(`${API_BASE}/Class/dropdown`).then(r => r.json()).catch(() => []),
                    fetch(`${API_BASE}/Subject/dropdown`).then(r => r.json()).catch(() => [])
                ]);

                populateDropdown('sessionId', sessions, 'id', 'sessionName');
                populateDropdown('classId', classes, 'id', 'name');
                populateDropdown('subjectId', subjects, 'id', 'name');
            } catch (error) {
                console.error('Error loading dropdowns:', error);
            }
        }

        function populateDropdown(elementId, data, valueField, textField) {
            const select = $(`#${elementId}`);
            const currentValue = select.val();
            select.find('option:not(:first)').remove();
            data.forEach(item => {
                select.append(`<option value="${item[valueField]}">${item[textField]}</option>`);
            });
            if (currentValue) select.val(currentValue);
        }

        async function loadExams() {
            showLoading();
            try {
                const response = await fetch(`${API_BASE}/Exam`);
                if (response.ok) {
                    const data = await response.json();
                    renderList(data);
                } else {
                    showAlert('Failed to load exams', 'danger');
                }
            } catch (error) {
                console.error('Error loading exams:', error);
                showAlert('Error loading exams: ' + error.message, 'danger');
            } finally {
                hideLoading();
            }
        }

        function renderList(items) {
            const tbody = $('#examsBody');
            tbody.empty();

            if (items.length === 0) {
                tbody.html('<tr><td colspan="9" class="text-center text-muted py-4">No exams found. Add a new exam using the form above.</td></tr>');
                return;
            }

            items.forEach((item, index) => {
                const statusClass = `status-${item.statusName.toLowerCase().replace(' ', '')}`;
                const row = `
                    <tr data-id="${item.id}" class="${editingId === item.id ? 'selected' : ''}">
                        <td>${index + 1}</td>
                        <td><strong>${item.examName}</strong></td>
                        <td>${item.examTypeName}</td>
                        <td>${item.className || '-'}</td>
                        <td>${item.subjectName || '-'}</td>
                        <td>${formatDate(item.examDate)}</td>
                        <td class="text-center">${item.passingMarks}/${item.totalMarks}</td>
                        <td class="text-center">
                            <span class="${statusClass} fw-bold">${item.statusName}</span>
                        </td>
                        <td class="text-center">
                            <button type="button" class="btn btn-sm btn-warning me-1" onclick="viewResults(${item.id})" title="Results">
                                <i class="bi bi-clipboard-data"></i>
                            </button>
                            <button type="button" class="btn btn-sm btn-info me-1" onclick="editExam(${item.id})" title="Edit">
                                <i class="bi bi-pencil"></i>
                            </button>
                            <button type="button" class="btn btn-sm btn-danger" onclick="deleteExam(${item.id}, '${item.examName}')" title="Delete">
                                <i class="bi bi-trash"></i>
                            </button>
                        </td>
                    </tr>
                `;
                tbody.append(row);
            });
        }

        function formatDate(dateString) {
            const date = new Date(dateString);
            return date.toLocaleDateString('en-GB', { day: '2-digit', month: 'short', year: 'numeric' });
        }

        function viewResults(examId) {
            window.location.href = `/exam/results/${examId}`;
        }

        async function editExam(id) {
            showLoading();
            try {
                const response = await fetch(`${API_BASE}/Exam/${id}`);
                if (response.ok) {
                    const data = await response.json();
                    populateForm(data);
                    editingId = id;
                    $('#formTitle').text('Edit Exam');

                    $('#examsBody tr').removeClass('selected');
                    $(`#examsBody tr[data-id="${id}"]`).addClass('selected');

                    $('html, body').animate({
                        scrollTop: $('.form-section').offset().top - 100
                    }, 300);
                } else {
                    showAlert('Failed to load exam', 'danger');
                }
            } catch (error) {
                console.error('Error loading exam:', error);
                showAlert('Error loading exam: ' + error.message, 'danger');
            } finally {
                hideLoading();
            }
        }

        async function deleteExam(id, name) {
            if (!confirm(`Are you sure you want to delete "${name}"?`)) {
                return;
            }

            showLoading();
            try {
                const response = await fetch(`${API_BASE}/Exam/${id}`, {
                    method: 'DELETE',
                    headers: { 'Content-Type': 'application/json' }
                });

                if (response.ok) {
                    showAlert('Exam deleted successfully!', 'success');
                    if (editingId === id) {
                        resetForm();
                    }
                    await loadExams();
                } else {
                    const error = await response.json();
                    showAlert(error.message || 'Failed to delete exam', 'danger');
                }
            } catch (error) {
                console.error('Error deleting exam:', error);
                showAlert('Error deleting exam: ' + error.message, 'danger');
            } finally {
                hideLoading();
            }
        }

        function populateForm(data) {
            $('#examId').val(data.id);
            $('#examName').val(data.examName);
            $('#examType').val(data.examType);
            $('#sessionId').val(data.sessionId);
            $('#classId').val(data.classId);
            $('#subjectId').val(data.subjectId);
            $('#examDate').val(data.examDate.split('T')[0]);
            $('#startTime').val(data.startTime ? formatTimeForInput(data.startTime) : '');
            $('#endTime').val(data.endTime ? formatTimeForInput(data.endTime) : '');
            $('#totalMarks').val(data.totalMarks);
            $('#passingMarks').val(data.passingMarks);
            $('#status').val(data.status);
        }

        function formatTimeForInput(timeSpan) {
            if (!timeSpan) return '';
            const parts = timeSpan.split(':');
            return `${parts[0].padStart(2, '0')}:${parts[1].padStart(2, '0')}`;
        }

        function resetForm() {
            $('#examId').val('0');
            $('#examName').val('');
            $('#examType').val('1');
            $('#sessionId').val('');
            $('#classId').val('');
            $('#subjectId').val('');
            $('#examDate').val('');
            $('#startTime').val('');
            $('#endTime').val('');
            $('#totalMarks').val('100');
            $('#passingMarks').val('40');
            $('#status').val('1');
            $('#formTitle').text('Add New Exam');
            editingId = 0;
            $('#examsBody tr').removeClass('selected');
        }

        async function saveExam() {
            const examName = $('#examName').val().trim();
            const sessionId = $('#sessionId').val();
            const classId = $('#classId').val();
            const subjectId = $('#subjectId').val();
            const examDate = $('#examDate').val();

            if (!examName || !sessionId || !classId || !subjectId || !examDate) {
                showAlert('Please fill all required fields', 'danger');
                return;
            }

            const id = parseInt($('#examId').val()) || 0;
            const startTime = $('#startTime').val();
            const endTime = $('#endTime').val();

            const data = {
                ExamName: examName,
                ExamType: parseInt($('#examType').val()),
                ClassId: parseInt(classId),
                SubjectId: parseInt(subjectId),
                SessionId: parseInt(sessionId),
                ExamDate: examDate,
                StartTime: startTime ? startTime + ':00' : null,
                EndTime: endTime ? endTime + ':00' : null,
                TotalMarks: parseFloat($('#totalMarks').val()),
                PassingMarks: parseFloat($('#passingMarks').val()),
                Status: parseInt($('#status').val()),
                IsActive: true
            };

            showLoading();
            try {
                let response;
                if (id === 0) {
                    response = await fetch(`${API_BASE}/Exam`, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(data)
                    });
                } else {
                    response = await fetch(`${API_BASE}/Exam/${id}`, {
                        method: 'PUT',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(data)
                    });
                }

                if (response.ok) {
                    showAlert('Exam saved successfully!', 'success');
                    resetForm();
                    await loadExams();
                } else {
                    const error = await response.json();
                    showAlert(error.message || 'Failed to save exam', 'danger');
                }
            } catch (error) {
                console.error('Error saving exam:', error);
                showAlert('Error saving exam: ' + error.message, 'danger');
            } finally {
                hideLoading();
            }
        }

        function showLoading() {
            $('#loadingOverlay').show();
        }

        function hideLoading() {
            $('#loadingOverlay').hide();
        }

        function showAlert(message, type) {
            if (type === 'success') {
                toastSuccess(message);
            } else if (type === 'danger' || type === 'error') {
                toastError(message);
            } else if (type === 'warning') {
                toastWarning(message);
            } else {
                toastInfo(message);
            }
        }
    </script>
}
