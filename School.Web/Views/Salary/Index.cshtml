@{
    ViewData["Title"] = "Salary Management";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<style>
    .card {
        border: none;
        border-radius: 16px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
        margin-bottom: 24px;
    }

    .card-header {
        background: white;
        border-bottom: 1px solid #e2e8f0;
        padding: 20px 24px;
        border-radius: 16px 16px 0 0 !important;
    }

    .card-header h5 {
        margin: 0;
        font-weight: 600;
        color: #1e293b;
    }

    .card-body {
        padding: 24px;
    }

    .form-label {
        font-weight: 500;
        color: #475569;
        margin-bottom: 8px;
        font-size: 14px;
    }

    .form-control, .form-select {
        border: 2px solid #e2e8f0;
        border-radius: 10px;
        padding: 10px 14px;
        font-size: 14px;
        transition: all 0.2s;
    }

    .form-control:focus, .form-select:focus {
        border-color: #008649;
        box-shadow: 0 0 0 4px rgba(0, 134, 73, 0.1);
    }

    .btn-primary {
        background: linear-gradient(135deg, #008649 0%, #006d3b 100%);
        border: none;
        border-radius: 10px;
        padding: 10px 20px;
        font-weight: 600;
        font-size: 14px;
    }

    .btn-secondary {
        background: #f1f5f9;
        border: 2px solid #e2e8f0;
        border-radius: 10px;
        padding: 10px 20px;
        font-weight: 600;
        font-size: 14px;
        color: #64748b;
    }

    .btn-info {
        background: linear-gradient(135deg, #0ea5e9 0%, #0284c7 100%);
        border: none;
        border-radius: 10px;
        color: white;
    }

    .btn-success {
        background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
        border: none;
        border-radius: 10px;
        color: white;
    }

    .btn-warning {
        background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
        border: none;
        border-radius: 10px;
        color: white;
    }

    .btn-danger {
        background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        border: none;
        border-radius: 10px;
        color: white;
    }

    .table {
        margin-bottom: 0;
    }

    .table thead th {
        background: #f8fafc;
        border-bottom: 2px solid #e2e8f0;
        padding: 14px 16px;
        font-weight: 600;
        font-size: 13px;
        color: #475569;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        white-space: nowrap;
    }

    .table tbody td {
        padding: 12px 16px;
        vertical-align: middle;
        border-bottom: 1px solid #f1f5f9;
        font-size: 14px;
    }

    .table tbody tr:hover {
        background: #f8fafc;
    }

    .alert {
        border-radius: 12px;
        border: none;
        padding: 16px 20px;
    }

    .loading-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(255, 255, 255, 0.8);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 100;
        border-radius: 16px;
    }

    .spinner-border {
        width: 3rem;
        height: 3rem;
        border-width: 0.3rem;
    }

    .filter-section {
        background: #f8fafc;
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 20px;
    }

    .filter-section-title {
        font-size: 14px;
        font-weight: 600;
        color: #64748b;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 16px;
        padding-bottom: 8px;
        border-bottom: 2px solid #e2e8f0;
    }

    .grid-section {
        margin-top: 24px;
    }

    .grid-section-title {
        font-size: 14px;
        font-weight: 600;
        color: #64748b;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 16px;
        padding-bottom: 8px;
        border-bottom: 2px solid #e2e8f0;
    }

    .status-pending { color: #f59e0b; font-weight: 600; }
    .status-approved { color: #0284c7; font-weight: 600; }
    .status-paid { color: #16a34a; font-weight: 600; }
    .status-cancelled { color: #dc2626; font-weight: 600; }

    .currency {
        font-family: 'Courier New', monospace;
        text-align: right;
    }
</style>

<div class="container-fluid">
    <!-- Alert Messages -->
    <div id="alertContainer"></div>

    <!-- Salary Card -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5><i class="bi bi-cash-stack me-2"></i>Salary Management</h5>
            <a href="/salary/form" class="btn btn-primary">
                <i class="bi bi-plus-lg me-1"></i> Add Salary
            </a>
        </div>
        <div class="card-body position-relative">
            <div id="loadingOverlay" class="loading-overlay" style="display: none;">
                <div class="spinner-border text-success" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>

            <!-- Filter Section -->
            <div class="filter-section">
                <div class="filter-section-title">
                    <i class="bi bi-funnel me-2"></i>Filter Salaries
                </div>
                <div class="row g-3">
                    <div class="col-md-2">
                        <label for="filterMonth" class="form-label">Month</label>
                        <select class="form-select" id="filterMonth">
                            <option value="">All Months</option>
                            <option value="1">January</option>
                            <option value="2">February</option>
                            <option value="3">March</option>
                            <option value="4">April</option>
                            <option value="5">May</option>
                            <option value="6">June</option>
                            <option value="7">July</option>
                            <option value="8">August</option>
                            <option value="9">September</option>
                            <option value="10">October</option>
                            <option value="11">November</option>
                            <option value="12">December</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label for="filterYear" class="form-label">Year</label>
                        <select class="form-select" id="filterYear">
                            <option value="">All Years</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="filterEmployee" class="form-label">Employee</label>
                        <select class="form-select" id="filterEmployee">
                            <option value="">All Employees</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label for="filterStatus" class="form-label">Status</label>
                        <select class="form-select" id="filterStatus">
                            <option value="">All Status</option>
                            <option value="1">Pending</option>
                            <option value="2">Approved</option>
                            <option value="3">Paid</option>
                            <option value="4">Cancelled</option>
                        </select>
                    </div>
                    <div class="col-md-3 d-flex align-items-end">
                        <button type="button" class="btn btn-primary me-2" onclick="loadSalaries()">
                            <i class="bi bi-search me-1"></i> Search
                        </button>
                        <button type="button" class="btn btn-secondary" onclick="clearFilters()">
                            <i class="bi bi-x-lg"></i>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Grid Section -->
            <div class="grid-section">
                <div class="grid-section-title d-flex justify-content-between align-items-center">
                    <span><i class="bi bi-table me-2"></i>Salary Records</span>
                    <div>
                        <button type="button" class="btn btn-sm btn-success me-1" onclick="approveSelected()">
                            <i class="bi bi-check-lg me-1"></i> Approve Selected
                        </button>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover" id="salariesTable">
                        <thead>
                            <tr>
                                <th style="width: 40px;">
                                    <input type="checkbox" id="selectAll" onclick="toggleSelectAll()" />
                                </th>
                                <th style="width: 60px;">Sr#</th>
                                <th>Employee</th>
                                <th>Designation</th>
                                <th>Month/Year</th>
                                <th class="text-end">Basic</th>
                                <th class="text-end">Gross</th>
                                <th class="text-end">Deductions</th>
                                <th class="text-end">Net Salary</th>
                                <th class="text-center">Status</th>
                                <th class="text-center" style="width: 150px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody id="salariesBody">
                            <!-- Salary records will be loaded dynamically -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        //const API_BASE = 'http://localhost:5266/api';
        let allSalaries = [];

        $(document).ready(function () {
            loadDropdowns();
            loadSalaries();
        });

        async function loadDropdowns() {
            // Populate years
            const currentYear = new Date().getFullYear();
            const yearSelect = $('#filterYear');
            for (let y = currentYear; y >= currentYear - 5; y--) {
                yearSelect.append(`<option value="${y}">${y}</option>`);
            }

            // Load employees
            try {
                const employees = await fetch(`${API_BASE}/Employee/dropdown`).then(r => r.json()).catch(() => []);
                const empSelect = $('#filterEmployee');
                employees.forEach(e => {
                    empSelect.append(`<option value="${e.id}">${e.fullName} (${e.employeeCode})</option>`);
                });
            } catch (error) {
                console.error('Error loading employees:', error);
            }
        }

        async function loadSalaries() {
            showLoading();
            try {
                const month = $('#filterMonth').val();
                const year = $('#filterYear').val();

                let url = `${API_BASE}/Salary`;
                if (month && year) {
                    url = `${API_BASE}/Salary/month/${month}/year/${year}`;
                }

                const response = await fetch(url);
                if (response.ok) {
                    allSalaries = await response.json();
                    applyFilters();
                } else {
                    showAlert('Failed to load salaries', 'danger');
                }
            } catch (error) {
                console.error('Error loading salaries:', error);
                showAlert('Error loading salaries: ' + error.message, 'danger');
            } finally {
                hideLoading();
            }
        }

        function applyFilters() {
            let filtered = [...allSalaries];

            const employeeId = $('#filterEmployee').val();
            const status = $('#filterStatus').val();

            if (employeeId) {
                filtered = filtered.filter(s => s.employeeId == employeeId);
            }
            if (status) {
                filtered = filtered.filter(s => s.status == status);
            }

            renderList(filtered);
        }

        function renderList(items) {
            const tbody = $('#salariesBody');
            tbody.empty();

            if (items.length === 0) {
                tbody.html('<tr><td colspan="11" class="text-center text-muted py-4">No salary records found.</td></tr>');
                return;
            }

            items.forEach((item, index) => {
                const statusClass = `status-${item.statusName.toLowerCase()}`;
                const canApprove = item.status === 1; // Pending
                const canPay = item.status === 2; // Approved

                const row = `
                    <tr data-id="${item.id}">
                        <td>
                            <input type="checkbox" class="salary-checkbox" value="${item.id}" ${!canApprove ? 'disabled' : ''} />
                        </td>
                        <td>${index + 1}</td>
                        <td>
                            <strong>${item.employeeName}</strong><br>
                            <small class="text-muted">${item.employeeCode}</small>
                        </td>
                        <td>${item.designationName || '-'}</td>
                        <td>${item.monthYear}</td>
                        <td class="text-end currency">${formatCurrency(item.basicSalary)}</td>
                        <td class="text-end currency">${formatCurrency(item.grossSalary)}</td>
                        <td class="text-end currency text-danger">${formatCurrency(item.totalDeductions)}</td>
                        <td class="text-end currency fw-bold">${formatCurrency(item.netSalary)}</td>
                        <td class="text-center">
                            <span class="${statusClass}">${item.statusName}</span>
                        </td>
                        <td class="text-center">
                            ${canPay ? `<button type="button" class="btn btn-sm btn-success me-1" onclick="paySalary(${item.id})" title="Pay"><i class="bi bi-cash"></i></button>` : ''}
                            <button type="button" class="btn btn-sm btn-info me-1" onclick="editSalary(${item.id})" title="Edit">
                                <i class="bi bi-pencil"></i>
                            </button>
                            <button type="button" class="btn btn-sm btn-danger" onclick="deleteSalary(${item.id})" title="Delete">
                                <i class="bi bi-trash"></i>
                            </button>
                        </td>
                    </tr>
                `;
                tbody.append(row);
            });
        }

        function formatCurrency(amount) {
            return new Intl.NumberFormat('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 }).format(amount || 0);
        }

        function toggleSelectAll() {
            const isChecked = $('#selectAll').is(':checked');
            $('.salary-checkbox:not(:disabled)').prop('checked', isChecked);
        }

        async function approveSelected() {
            const selectedIds = $('.salary-checkbox:checked').map(function() {
                return parseInt($(this).val());
            }).get();

            if (selectedIds.length === 0) {
                showAlert('Please select salaries to approve', 'warning');
                return;
            }

            if (!confirm(`Are you sure you want to approve ${selectedIds.length} salary record(s)?`)) {
                return;
            }

            showLoading();
            try {
                const response = await fetch(`${API_BASE}/Salary/approve`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ salaryIds: selectedIds })
                });

                if (response.ok) {
                    showAlert('Salaries approved successfully!', 'success');
                    await loadSalaries();
                } else {
                    showAlert('Failed to approve salaries', 'danger');
                }
            } catch (error) {
                showAlert('Error approving salaries: ' + error.message, 'danger');
            } finally {
                hideLoading();
            }
        }

        async function paySalary(id) {
            const paymentDate = prompt('Enter payment date (YYYY-MM-DD):', new Date().toISOString().split('T')[0]);
            if (!paymentDate) return;

            const paymentRef = prompt('Enter payment reference (optional):');

            showLoading();
            try {
                const response = await fetch(`${API_BASE}/Salary/pay`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        salaryId: id,
                        paymentDate: paymentDate,
                        paymentReference: paymentRef
                    })
                });

                if (response.ok) {
                    showAlert('Salary paid successfully!', 'success');
                    await loadSalaries();
                } else {
                    showAlert('Failed to pay salary', 'danger');
                }
            } catch (error) {
                showAlert('Error paying salary: ' + error.message, 'danger');
            } finally {
                hideLoading();
            }
        }

        function editSalary(id) {
            window.location.href = `/salary/form/${id}`;
        }

        async function deleteSalary(id) {
            if (!confirm('Are you sure you want to delete this salary record?')) {
                return;
            }

            showLoading();
            try {
                const response = await fetch(`${API_BASE}/Salary/${id}`, {
                    method: 'DELETE'
                });

                if (response.ok) {
                    showAlert('Salary record deleted successfully!', 'success');
                    await loadSalaries();
                } else {
                    showAlert('Failed to delete salary record', 'danger');
                }
            } catch (error) {
                showAlert('Error deleting salary: ' + error.message, 'danger');
            } finally {
                hideLoading();
            }
        }

        function clearFilters() {
            $('#filterMonth').val('');
            $('#filterYear').val('');
            $('#filterEmployee').val('');
            $('#filterStatus').val('');
            loadSalaries();
        }

        function showLoading() {
            $('#loadingOverlay').show();
        }

        function hideLoading() {
            $('#loadingOverlay').hide();
        }

        function showAlert(message, type) {
            if (type === 'success') {
                toastSuccess(message);
            } else if (type === 'danger' || type === 'error') {
                toastError(message);
            } else if (type === 'warning') {
                toastWarning(message);
            } else {
                toastInfo(message);
            }
        }
    </script>
}
