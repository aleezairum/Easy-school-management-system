@{
    ViewData["Title"] = "Class Management";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<style>
    .card {
        border: none;
        border-radius: 16px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
        margin-bottom: 24px;
    }

    .card-header {
        background: white;
        border-bottom: 1px solid #e2e8f0;
        padding: 20px 24px;
        border-radius: 16px 16px 0 0 !important;
    }

    .card-header h5 {
        margin: 0;
        font-weight: 600;
        color: #1e293b;
    }

    .card-body {
        padding: 24px;
    }

    .form-label {
        font-weight: 500;
        color: #475569;
        margin-bottom: 8px;
        font-size: 14px;
    }

    .form-control, .form-select {
        border: 2px solid #e2e8f0;
        border-radius: 10px;
        padding: 10px 14px;
        font-size: 14px;
        transition: all 0.2s;
    }

    .form-control:focus, .form-select:focus {
        border-color: #008649;
        box-shadow: 0 0 0 4px rgba(0, 134, 73, 0.1);
    }

    .form-check-input {
        width: 18px;
        height: 18px;
        border: 2px solid #cbd5e1;
        border-radius: 4px;
        cursor: pointer;
    }

    .form-check-input:checked {
        background-color: #008649;
        border-color: #008649;
    }

    .form-check-input:focus {
        box-shadow: 0 0 0 4px rgba(0, 134, 73, 0.1);
    }

    .btn-primary {
        background: linear-gradient(135deg, #008649 0%, #006d3b 100%);
        border: none;
        border-radius: 10px;
        padding: 10px 20px;
        font-weight: 600;
        font-size: 14px;
        transition: all 0.2s;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(0, 134, 73, 0.4);
        background: linear-gradient(135deg, #006d3b 0%, #005a30 100%);
    }

    .btn-secondary {
        background: #f1f5f9;
        border: 2px solid #e2e8f0;
        border-radius: 10px;
        padding: 10px 20px;
        font-weight: 600;
        font-size: 14px;
        color: #64748b;
        transition: all 0.2s;
    }

    .btn-secondary:hover {
        background: #e2e8f0;
        border-color: #cbd5e1;
        color: #475569;
    }

    .btn-info {
        background: linear-gradient(135deg, #0ea5e9 0%, #0284c7 100%);
        border: none;
        border-radius: 8px;
        padding: 6px 12px;
        font-weight: 600;
        font-size: 13px;
        color: white;
        transition: all 0.2s;
    }

    .btn-info:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(14, 165, 233, 0.4);
        color: white;
    }

    .btn-danger {
        background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        border: none;
        border-radius: 8px;
        padding: 6px 12px;
        font-weight: 600;
        font-size: 13px;
        color: white;
        transition: all 0.2s;
    }

    .btn-danger:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(239, 68, 68, 0.4);
        color: white;
    }

    .table {
        margin-bottom: 0;
    }

    .table thead th {
        background: #f8fafc;
        border-bottom: 2px solid #e2e8f0;
        padding: 14px 16px;
        font-weight: 600;
        font-size: 13px;
        color: #475569;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        white-space: nowrap;
    }

    .table tbody td {
        padding: 12px 16px;
        vertical-align: middle;
        border-bottom: 1px solid #f1f5f9;
        font-size: 14px;
    }

    .table tbody tr:hover {
        background: #f8fafc;
    }

    .table tbody tr.selected {
        background: #ecfdf5;
        border-left: 3px solid #008649;
    }

    .alert {
        border-radius: 12px;
        border: none;
        padding: 16px 20px;
    }

    .alert-success {
        background: #dcfce7;
        color: #166534;
    }

    .alert-danger {
        background: #fee2e2;
        color: #991b1b;
    }

    .loading-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(255, 255, 255, 0.8);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 100;
        border-radius: 16px;
    }

    .spinner-border {
        width: 3rem;
        height: 3rem;
        border-width: 0.3rem;
    }

    .form-section {
        background: #f8fafc;
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 20px;
    }

    .form-section-title {
        font-size: 14px;
        font-weight: 600;
        color: #64748b;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 16px;
        padding-bottom: 8px;
        border-bottom: 2px solid #e2e8f0;
    }

    .grid-section {
        margin-top: 24px;
    }

    .grid-section-title {
        font-size: 14px;
        font-weight: 600;
        color: #64748b;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 16px;
        padding-bottom: 8px;
        border-bottom: 2px solid #e2e8f0;
    }
</style>

<div class="container-fluid">
    <!-- Alert Messages -->
    <div id="alertContainer"></div>

    <!-- Classes Card -->
    <div class="card">
        <div class="card-header">
            <h5><i class="bi bi-door-open-fill me-2"></i>Class Management</h5>
        </div>
        <div class="card-body position-relative">
            <div id="loadingOverlay" class="loading-overlay" style="display: none;">
                <div class="spinner-border text-success" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>

            <!-- Form Section -->
            <div class="form-section">
                <div class="form-section-title">
                    <i class="bi bi-pencil-square me-2"></i><span id="formTitle">Add New Class</span>
                </div>
                <form id="classForm">
                    <input type="hidden" id="classId" value="0" />

                    <div class="row g-3 align-items-end">
                        <div class="col-md-4">
                            <label for="className" class="form-label">Class Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="className" placeholder="e.g., Grade 1, Class 10" required />
                        </div>
                        <div class="col-md-2">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="isActive" checked />
                                <label class="form-check-label" for="isActive">Active</label>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="d-flex gap-2">
                                <button type="button" class="btn btn-primary" onclick="saveClass()">
                                    <i class="bi bi-check-lg me-1"></i> Save
                                </button>
                                <button type="button" class="btn btn-secondary" onclick="resetForm()">
                                    <i class="bi bi-x-lg me-1"></i> Clear
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

            <!-- Grid Section -->
            <div class="grid-section">
                <div class="grid-section-title">
                    <i class="bi bi-table me-2"></i>Classes List
                </div>
                <div class="table-responsive">
                    <table class="table table-hover" id="classesTable">
                        <thead>
                            <tr>
                                <th style="width: 60px;">Sr#</th>
                                <th>Class Name</th>
                                <th class="text-center" style="width: 100px;">Status</th>
                                <th class="text-center" style="width: 150px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody id="classesBody">
                            <!-- Classes will be loaded dynamically -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const API_BASE = 'http://localhost:5266/api';
        let editingClassId = 0;

        $(document).ready(function () {
            loadClasses();
        });

        // Load all classes
        async function loadClasses() {
            showLoading();
            try {
                const response = await fetch(`${API_BASE}/class`);
                if (response.ok) {
                    const classes = await response.json();
                    renderClassesList(classes);
                } else {
                    showAlert('Failed to load classes', 'danger');
                }
            } catch (error) {
                console.error('Error loading classes:', error);
                showAlert('Error loading classes: ' + error.message, 'danger');
            } finally {
                hideLoading();
            }
        }

        // Render classes list table
        function renderClassesList(classes) {
            const tbody = $('#classesBody');
            tbody.empty();

            if (classes.length === 0) {
                tbody.html('<tr><td colspan="4" class="text-center text-muted py-4">No classes found. Add a new class using the form above.</td></tr>');
                return;
            }

            classes.forEach((cls, index) => {
                const row = `
                    <tr data-id="${cls.vid}" class="${editingClassId === cls.vid ? 'selected' : ''}">
                        <td>${index + 1}</td>
                        <td><strong>${cls.vName}</strong></td>
                        <td class="text-center">
                            <span class="badge ${cls.isActive ? 'bg-success' : 'bg-secondary'}">
                                ${cls.isActive ? 'Active' : 'Inactive'}
                            </span>
                        </td>
                        <td class="text-center">
                            <button type="button" class="btn btn-sm btn-info me-1" onclick="editClass(${cls.vid})" title="Edit">
                                <i class="bi bi-pencil"></i>
                            </button>
                            <button type="button" class="btn btn-sm btn-danger" onclick="deleteClass(${cls.vid}, '${cls.vName}')" title="Delete">
                                <i class="bi bi-trash"></i>
                            </button>
                        </td>
                    </tr>
                `;
                tbody.append(row);
            });
        }

        // Edit existing class
        async function editClass(classId) {
            showLoading();
            try {
                const response = await fetch(`${API_BASE}/class/${classId}`);
                if (response.ok) {
                    const data = await response.json();
                    populateForm(data);
                    editingClassId = classId;
                    $('#formTitle').text('Edit Class');

                    // Highlight the selected row
                    $('#classesBody tr').removeClass('selected');
                    $(`#classesBody tr[data-id="${classId}"]`).addClass('selected');

                    // Scroll to form
                    $('html, body').animate({
                        scrollTop: $('.form-section').offset().top - 100
                    }, 300);
                } else {
                    showAlert('Failed to load class', 'danger');
                }
            } catch (error) {
                console.error('Error loading class:', error);
                showAlert('Error loading class: ' + error.message, 'danger');
            } finally {
                hideLoading();
            }
        }

        // Delete class
        async function deleteClass(classId, className) {
            if (!confirm(`Are you sure you want to delete the class "${className}"?\n\nNote: This will fail if there are sections or subjects associated with this class.`)) {
                return;
            }

            showLoading();
            try {
                const response = await fetch(`${API_BASE}/class/${classId}`, {
                    method: 'DELETE'
                });

                if (response.ok) {
                    showAlert('Class deleted successfully!', 'success');
                    if (editingClassId === classId) {
                        resetForm();
                    }
                    await loadClasses();
                } else {
                    const error = await response.json();
                    showAlert(error.message || 'Failed to delete class', 'danger');
                }
            } catch (error) {
                console.error('Error deleting class:', error);
                showAlert('Error deleting class: ' + error.message, 'danger');
            } finally {
                hideLoading();
            }
        }

        // Populate form with class data
        function populateForm(data) {
            $('#classId').val(data.vid);
            $('#className').val(data.vName);
            $('#isActive').prop('checked', data.isActive);
        }

        // Reset form
        function resetForm() {
            $('#classId').val('0');
            $('#className').val('');
            $('#isActive').prop('checked', true);
            $('#formTitle').text('Add New Class');
            editingClassId = 0;

            // Remove selected highlight from table
            $('#classesBody tr').removeClass('selected');
        }

        // Save class
        async function saveClass() {
            const className = $('#className').val().trim();

            if (!className) {
                showAlert('Please enter a class name', 'danger');
                $('#className').focus();
                return;
            }

            const classId = parseInt($('#classId').val()) || 0;
            const data = {
                VID: classId,
                VName: className,
                IsActive: $('#isActive').is(':checked')
            };

            showLoading();
            try {
                let response;
                    response = await fetch(`${API_BASE}/class`, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(data)
                    });
                

                if (response.ok) {
                    showAlert(classId === 0 ? 'Class created successfully!' : 'Class updated successfully!', 'success');
                    resetForm();
                    await loadClasses();
                } else {
                    const error = await response.json();
                    showAlert(error.message || 'Failed to save class', 'danger');
                }
            } catch (error) {
                console.error('Error saving class:', error);
                showAlert('Error saving class: ' + error.message, 'danger');
            } finally {
                hideLoading();
            }
        }

        // Helper functions
        function showLoading() {
            $('#loadingOverlay').show();
        }

        function hideLoading() {
            $('#loadingOverlay').hide();
        }

        function showAlert(message, type) {
            const alert = `
                <div class="alert alert-${type} alert-dismissible fade show" role="alert">
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            `;
            $('#alertContainer').html(alert);

            // Auto-hide after 5 seconds
            setTimeout(() => {
                $('.alert').alert('close');
            }, 5000);
        }
    </script>
}
