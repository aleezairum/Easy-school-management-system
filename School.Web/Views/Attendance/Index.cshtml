@{
    ViewData["Title"] = "Attendance";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<style>
    .card {
        border: none;
        border-radius: 16px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
        margin-bottom: 24px;
    }

    .card-header {
        background: white;
        border-bottom: 1px solid #e2e8f0;
        padding: 20px 24px;
        border-radius: 16px 16px 0 0 !important;
    }

    .card-header h5 {
        margin: 0;
        font-weight: 600;
        color: #1e293b;
    }

    .card-body {
        padding: 24px;
    }

    .form-label {
        font-weight: 500;
        color: #475569;
        margin-bottom: 8px;
        font-size: 14px;
    }

    .form-control, .form-select {
        border: 2px solid #e2e8f0;
        border-radius: 10px;
        padding: 10px 14px;
        font-size: 14px;
        transition: all 0.2s;
    }

    .form-control:focus, .form-select:focus {
        border-color: #008649;
        box-shadow: 0 0 0 4px rgba(0, 134, 73, 0.1);
    }

    .btn-primary {
        background: linear-gradient(135deg, #008649 0%, #006d3b 100%);
        border: none;
        border-radius: 10px;
        padding: 10px 20px;
        font-weight: 600;
        font-size: 14px;
        transition: all 0.2s;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(0, 134, 73, 0.4);
        background: linear-gradient(135deg, #006d3b 0%, #005a30 100%);
    }

    .btn-secondary {
        background: #f1f5f9;
        border: 2px solid #e2e8f0;
        border-radius: 10px;
        padding: 10px 20px;
        font-weight: 600;
        font-size: 14px;
        color: #64748b;
        transition: all 0.2s;
    }

    .btn-info {
        background: linear-gradient(135deg, #0ea5e9 0%, #0284c7 100%);
        border: none;
        border-radius: 10px;
        padding: 10px 20px;
        font-weight: 600;
        font-size: 14px;
        color: white;
        transition: all 0.2s;
    }

    .btn-danger {
        background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        border: none;
        border-radius: 10px;
        padding: 10px 20px;
        font-weight: 600;
        font-size: 14px;
        color: white;
        transition: all 0.2s;
    }

    .table {
        margin-bottom: 0;
    }

    .table thead th {
        background: #f8fafc;
        border-bottom: 2px solid #e2e8f0;
        padding: 14px 16px;
        font-weight: 600;
        font-size: 13px;
        color: #475569;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        white-space: nowrap;
    }

    .table tbody td {
        padding: 12px 16px;
        vertical-align: middle;
        border-bottom: 1px solid #f1f5f9;
        font-size: 14px;
    }

    .table tbody tr:hover {
        background: #f8fafc;
    }

    .alert {
        border-radius: 12px;
        border: none;
        padding: 16px 20px;
    }

    .loading-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(255, 255, 255, 0.8);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 100;
        border-radius: 16px;
    }

    .spinner-border {
        width: 3rem;
        height: 3rem;
        border-width: 0.3rem;
    }

    .filter-section {
        background: #f8fafc;
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 20px;
    }

    .filter-section-title {
        font-size: 14px;
        font-weight: 600;
        color: #64748b;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 16px;
        padding-bottom: 8px;
        border-bottom: 2px solid #e2e8f0;
    }

    .grid-section {
        margin-top: 24px;
    }

    .grid-section-title {
        font-size: 14px;
        font-weight: 600;
        color: #64748b;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 16px;
        padding-bottom: 8px;
        border-bottom: 2px solid #e2e8f0;
    }

    .status-present { color: #16a34a; font-weight: 600; }
    .status-absent { color: #dc2626; font-weight: 600; }
    .status-late { color: #ea580c; font-weight: 600; }
    .status-leave { color: #0284c7; font-weight: 600; }

    .attendance-btn {
        min-width: 80px;
        margin: 2px;
    }

    .attendance-btn.active {
        box-shadow: 0 0 0 3px rgba(0, 134, 73, 0.3);
    }
</style>

<div class="container-fluid">
    <!-- Alert Messages -->
    <div id="alertContainer"></div>

    <!-- Attendance Card -->
    <div class="card">
        <div class="card-body position-relative">
            <div class="d-flex justify-content-end mb-3">
                <a href="/attendance/bulk" class="btn btn-primary">
                    <i class="bi bi-people me-1"></i> Bulk Entry
                </a>
            </div>
            <div id="loadingOverlay" class="loading-overlay" style="display: none;">
                <div class="spinner-border text-success" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>

            <!-- Filter Section -->
            <div class="filter-section">
                <div class="filter-section-title">
                    <i class="bi bi-funnel me-2"></i>Filter Attendance
                </div>
                <div class="row g-3">
                    <div class="col-md-2">
                        <label for="filterSession" class="form-label">Session</label>
                        <select class="form-select" id="filterSession">
                            <option value="">All Sessions</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label for="filterClass" class="form-label">Class</label>
                        <select class="form-select" id="filterClass">
                            <option value="">All Classes</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label for="filterSection" class="form-label">Section</label>
                        <select class="form-select" id="filterSection">
                            <option value="">All Sections</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label for="filterDate" class="form-label">Date</label>
                        <input type="date" class="form-control" id="filterDate" />
                    </div>
                    <div class="col-md-2">
                        <label for="filterStatus" class="form-label">Status</label>
                        <select class="form-select" id="filterStatus">
                            <option value="">All Status</option>
                            <option value="1">Present</option>
                            <option value="2">Absent</option>
                            <option value="3">Late</option>
                            <option value="4">Leave</option>
                        </select>
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="button" class="btn btn-primary me-2" onclick="loadAttendance()">
                            <i class="bi bi-search me-1"></i> Search
                        </button>
                        <button type="button" class="btn btn-secondary" onclick="clearFilters()">
                            <i class="bi bi-x-lg"></i>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Grid Section -->
            <div class="grid-section">
                <div class="grid-section-title">
                    <i class="bi bi-table me-2"></i>Attendance Records
                </div>
                <div class="table-responsive">
                    <table class="table table-hover" id="attendanceTable">
                        <thead>
                            <tr>
                                <th style="width: 60px;">Sr#</th>
                                <th>Roll #</th>
                                <th>Student Name</th>
                                <th>Class</th>
                                <th>Section</th>
                                <th>Date</th>
                                <th class="text-center">Status</th>
                                <th>Time In</th>
                                <th>Time Out</th>
                                <th class="text-center" style="width: 120px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody id="attendanceBody">
                            <!-- Attendance records will be loaded dynamically -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const API_BASE = 'http://localhost:5266/api';

        $(document).ready(function () {
            loadDropdowns();
            $('#filterDate').val(new Date().toISOString().split('T')[0]);
            loadAttendance();
        });

        async function loadDropdowns() {
            try {
                const [sessions, classes, sections] = await Promise.all([
                    fetch(`${API_BASE}/Session/dropdown`).then(r => r.json()).catch(() => []),
                    fetch(`${API_BASE}/Class/dropdown`).then(r => r.json()).catch(() => []),
                    fetch(`${API_BASE}/Section/dropdown`).then(r => r.json()).catch(() => [])
                ]);

                populateDropdown('filterSession', sessions, 'id', 'sessionName', true);
                populateDropdown('filterClass', classes, 'id', 'name', true);
                populateDropdown('filterSection', sections, 'id', 'name', true);
            } catch (error) {
                console.error('Error loading dropdowns:', error);
            }
        }

        function populateDropdown(elementId, data, valueField, textField, includeAll = false) {
            const select = $(`#${elementId}`);
            select.find('option:not(:first)').remove();
            data.forEach(item => {
                select.append(`<option value="${item[valueField]}">${item[textField]}</option>`);
            });
        }

        async function loadAttendance() {
            showLoading();
            try {
                let url = `${API_BASE}/Attendance`;
                const date = $('#filterDate').val();
                const classId = $('#filterClass').val();
                const sectionId = $('#filterSection').val();
                const sessionId = $('#filterSession').val();

                if (date && classId && sectionId && sessionId) {
                    url = `${API_BASE}/Attendance/class/${classId}/section/${sectionId}/session/${sessionId}/date/${date}`;
                } else if (date) {
                    url = `${API_BASE}/Attendance/date/${date}`;
                }

                const response = await fetch(url);
                if (response.ok) {
                    let data = await response.json();

                    // Client-side filtering for status
                    const status = $('#filterStatus').val();
                    if (status) {
                        data = data.filter(a => a.status == status);
                    }

                    renderList(data);
                } else {
                    showAlert('Failed to load attendance records', 'danger');
                }
            } catch (error) {
                console.error('Error loading attendance:', error);
                showAlert('Error loading attendance: ' + error.message, 'danger');
            } finally {
                hideLoading();
            }
        }

        function renderList(items) {
            const tbody = $('#attendanceBody');
            tbody.empty();

            if (items.length === 0) {
                tbody.html('<tr><td colspan="10" class="text-center text-muted py-4">No attendance records found.</td></tr>');
                return;
            }

            items.forEach((item, index) => {
                const statusClass = `status-${item.statusName.toLowerCase()}`;
                const row = `
                    <tr data-id="${item.id}">
                        <td>${index + 1}</td>
                        <td><strong>${item.rollNumber || '-'}</strong></td>
                        <td>${item.studentName || '-'}</td>
                        <td>${item.className || '-'}</td>
                        <td>${item.sectionName || '-'}</td>
                        <td>${formatDate(item.attendanceDate)}</td>
                        <td class="text-center">
                            <span class="${statusClass}">${item.statusName}</span>
                        </td>
                        <td>${item.timeIn || '-'}</td>
                        <td>${item.timeOut || '-'}</td>
                        <td class="text-center">
                            <button type="button" class="btn btn-sm btn-info me-1" onclick="editAttendance(${item.id})" title="Edit">
                                <i class="bi bi-pencil"></i>
                            </button>
                            <button type="button" class="btn btn-sm btn-danger" onclick="deleteAttendance(${item.id})" title="Delete">
                                <i class="bi bi-trash"></i>
                            </button>
                        </td>
                    </tr>
                `;
                tbody.append(row);
            });
        }

        function formatDate(dateString) {
            const date = new Date(dateString);
            return date.toLocaleDateString('en-GB', { day: '2-digit', month: 'short', year: 'numeric' });
        }

        async function editAttendance(id) {
            showAlert('Edit functionality - Use bulk entry for editing multiple records', 'info');
        }

        async function deleteAttendance(id) {
            if (!confirm('Are you sure you want to delete this attendance record?')) {
                return;
            }

            showLoading();
            try {
                const response = await fetch(`${API_BASE}/Attendance/${id}`, {
                    method: 'DELETE',
                    headers: { 'Content-Type': 'application/json' }
                });

                if (response.ok) {
                    showAlert('Attendance record deleted successfully!', 'success');
                    await loadAttendance();
                } else {
                    const error = await response.json();
                    showAlert(error.message || 'Failed to delete attendance record', 'danger');
                }
            } catch (error) {
                console.error('Error deleting attendance:', error);
                showAlert('Error deleting attendance: ' + error.message, 'danger');
            } finally {
                hideLoading();
            }
        }

        function clearFilters() {
            $('#filterSession').val('');
            $('#filterClass').val('');
            $('#filterSection').val('');
            $('#filterDate').val(new Date().toISOString().split('T')[0]);
            $('#filterStatus').val('');
            loadAttendance();
        }

        function showLoading() {
            $('#loadingOverlay').show();
        }

        function hideLoading() {
            $('#loadingOverlay').hide();
        }

        function showAlert(message, type) {
            if (type === 'success') {
                toastSuccess(message);
            } else if (type === 'danger' || type === 'error') {
                toastError(message);
            } else if (type === 'warning') {
                toastWarning(message);
            } else {
                toastInfo(message);
            }
        }
    </script>
}
