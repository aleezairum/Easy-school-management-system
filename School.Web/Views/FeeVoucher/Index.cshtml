@{
    ViewData["Title"] = "Fee Vouchers";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<style>
    .card {
        border: none;
        border-radius: 16px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
        margin-bottom: 24px;
    }

    .card-header {
        background: white;
        border-bottom: 1px solid #e2e8f0;
        padding: 20px 24px;
        border-radius: 16px 16px 0 0 !important;
    }

    .card-header h5 {
        margin: 0;
        font-weight: 600;
        color: #1e293b;
    }

    .card-body {
        padding: 24px;
    }

    .form-label {
        font-weight: 500;
        color: #475569;
        margin-bottom: 8px;
        font-size: 14px;
    }

    .form-control, .form-select {
        border: 2px solid #e2e8f0;
        border-radius: 10px;
        padding: 10px 14px;
        font-size: 14px;
        transition: all 0.2s;
    }

    .form-control:focus, .form-select:focus {
        border-color: #008649;
        box-shadow: 0 0 0 4px rgba(0, 134, 73, 0.1);
    }

    .btn-primary {
        background: linear-gradient(135deg, #008649 0%, #006d3b 100%);
        border: none;
        border-radius: 10px;
        padding: 10px 20px;
        font-weight: 600;
        font-size: 14px;
    }

    .btn-secondary {
        background: #f1f5f9;
        border: 2px solid #e2e8f0;
        border-radius: 10px;
        padding: 10px 20px;
        font-weight: 600;
        font-size: 14px;
        color: #64748b;
    }

    .btn-info {
        background: linear-gradient(135deg, #0ea5e9 0%, #0284c7 100%);
        border: none;
        border-radius: 10px;
        color: white;
    }

    .btn-warning {
        background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
        border: none;
        border-radius: 10px;
        color: white;
    }

    .btn-danger {
        background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        border: none;
        border-radius: 10px;
        color: white;
    }

    .table {
        margin-bottom: 0;
    }

    .table thead th {
        background: #f8fafc;
        border-bottom: 2px solid #e2e8f0;
        padding: 14px 16px;
        font-weight: 600;
        font-size: 13px;
        color: #475569;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        white-space: nowrap;
    }

    .table tbody td {
        padding: 12px 16px;
        vertical-align: middle;
        border-bottom: 1px solid #f1f5f9;
        font-size: 14px;
    }

    .table tbody tr:hover {
        background: #f8fafc;
    }

    .alert {
        border-radius: 12px;
        border: none;
        padding: 16px 20px;
    }

    .loading-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(255, 255, 255, 0.8);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 100;
        border-radius: 16px;
    }

    .spinner-border {
        width: 3rem;
        height: 3rem;
        border-width: 0.3rem;
    }

    .filter-section {
        background: #f8fafc;
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 20px;
    }

    .filter-section-title {
        font-size: 14px;
        font-weight: 600;
        color: #64748b;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 16px;
        padding-bottom: 8px;
        border-bottom: 2px solid #e2e8f0;
    }

    .grid-section {
        margin-top: 24px;
    }

    .grid-section-title {
        font-size: 14px;
        font-weight: 600;
        color: #64748b;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 16px;
        padding-bottom: 8px;
        border-bottom: 2px solid #e2e8f0;
    }

    .currency {
        font-family: 'Courier New', monospace;
        text-align: right;
    }

    .summary-card {
        background: linear-gradient(135deg, #008649 0%, #006d3b 100%);
        color: white;
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 20px;
    }

    .summary-card h6 {
        opacity: 0.8;
        margin-bottom: 8px;
        font-size: 14px;
    }

    .summary-card h3 {
        margin: 0;
        font-weight: 700;
    }
</style>

<div class="container-fluid">
    <!-- Alert Messages -->
    <div id="alertContainer"></div>

    <!-- Summary Cards -->
    <div class="row mb-4" id="summaryCards" style="display: none;">
        <div class="col-md-3">
            <div class="summary-card">
                <h6>Today's Collection</h6>
                <h3 id="todayCollection">0.00</h3>
            </div>
        </div>
        <div class="col-md-3">
            <div class="summary-card" style="background: linear-gradient(135deg, #0ea5e9 0%, #0284c7 100%);">
                <h6>Total Vouchers (Period)</h6>
                <h3 id="totalVouchers">0</h3>
            </div>
        </div>
        <div class="col-md-3">
            <div class="summary-card" style="background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);">
                <h6>Total Amount (Period)</h6>
                <h3 id="totalAmount">0.00</h3>
            </div>
        </div>
    </div>

    <!-- Fee Voucher Card -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5><i class="bi bi-receipt-cutoff me-2"></i>Fee Vouchers (Payments)</h5>
            <a href="/feevoucher/form" class="btn btn-primary">
                <i class="bi bi-plus-lg me-1"></i> Receive Payment
            </a>
        </div>
        <div class="card-body position-relative">
            <div id="loadingOverlay" class="loading-overlay" style="display: none;">
                <div class="spinner-border text-success" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>

            <!-- Filter Section -->
            <div class="filter-section">
                <div class="filter-section-title">
                    <i class="bi bi-funnel me-2"></i>Filter Vouchers
                </div>
                <div class="row g-3">
                    <div class="col-md-2">
                        <label for="filterFromDate" class="form-label">From Date</label>
                        <input type="date" class="form-control" id="filterFromDate" />
                    </div>
                    <div class="col-md-2">
                        <label for="filterToDate" class="form-label">To Date</label>
                        <input type="date" class="form-control" id="filterToDate" />
                    </div>
                    <div class="col-md-3">
                        <label for="filterPaymentMethod" class="form-label">Payment Method</label>
                        <select class="form-select" id="filterPaymentMethod">
                            <option value="">All Methods</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="searchText" class="form-label">Search</label>
                        <input type="text" class="form-control" id="searchText" placeholder="Voucher #, Student..." />
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="button" class="btn btn-primary me-2" onclick="loadVouchers()">
                            <i class="bi bi-search me-1"></i> Search
                        </button>
                        <button type="button" class="btn btn-secondary" onclick="clearFilters()">
                            <i class="bi bi-x-lg"></i>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Grid Section -->
            <div class="grid-section">
                <div class="grid-section-title">
                    <i class="bi bi-table me-2"></i>Payment Records
                </div>
                <div class="table-responsive">
                    <table class="table table-hover" id="vouchersTable">
                        <thead>
                            <tr>
                                <th style="width: 60px;">Sr#</th>
                                <th>Voucher #</th>
                                <th>Challan #</th>
                                <th>Student</th>
                                <th>Payment Method</th>
                                <th>Payment Date</th>
                                <th class="text-end">Amount Paid</th>
                                <th>Reference</th>
                                <th class="text-center" style="width: 150px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody id="vouchersBody">
                            <!-- Fee voucher records will be loaded dynamically -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const API_BASE = 'http://localhost:5266/api';
        let allVouchers = [];

        $(document).ready(function () {
            // Set default dates to current month
            const today = new Date();
            const firstDay = new Date(today.getFullYear(), today.getMonth(), 1);
            $('#filterFromDate').val(firstDay.toISOString().split('T')[0]);
            $('#filterToDate').val(today.toISOString().split('T')[0]);

            loadDropdowns();
            loadVouchers();
        });

        // Static Payment Methods List
        const staticPaymentMethods = [
            { id: 1, code: 'JAZZ', name: 'JazzCash' },
            { id: 2, code: 'EASY', name: 'EasyPaisa' },
            { id: 3, code: 'CASH', name: 'Cash' },
            { id: 4, code: 'BANK', name: 'Bank Transfer' }
        ];

        async function loadDropdowns() {
            try {
                let paymentMethods = [];
                try {
                    paymentMethods = await fetch(`${API_BASE}/PaymentMethod/dropdown`).then(r => r.json());
                } catch {
                    // Use static list if API fails
                    paymentMethods = staticPaymentMethods;
                }

                // If API returns empty, use static list
                if (!paymentMethods || paymentMethods.length === 0) {
                    paymentMethods = staticPaymentMethods;
                }

                const select = $('#filterPaymentMethod');
                paymentMethods.forEach(pm => {
                    select.append(`<option value="${pm.id}">${pm.name}</option>`);
                });
            } catch (error) {
                console.error('Error loading dropdowns:', error);
                // Fallback to static list
                const select = $('#filterPaymentMethod');
                staticPaymentMethods.forEach(pm => {
                    select.append(`<option value="${pm.id}">${pm.name}</option>`);
                });
            }
        }

        async function loadVouchers() {
            showLoading();
            try {
                const fromDate = $('#filterFromDate').val();
                const toDate = $('#filterToDate').val();

                let url = `${API_BASE}/FeeVoucher`;
                if (fromDate && toDate) {
                    url = `${API_BASE}/FeeVoucher/daterange?fromDate=${fromDate}&toDate=${toDate}`;
                }

                const response = await fetch(url);
                if (response.ok) {
                    allVouchers = await response.json();
                    applyFilters();
                    updateSummary();
                } else {
                    showAlert('Failed to load vouchers', 'danger');
                }
            } catch (error) {
                console.error('Error loading vouchers:', error);
                showAlert('Error loading vouchers: ' + error.message, 'danger');
            } finally {
                hideLoading();
            }
        }

        function applyFilters() {
            let filtered = [...allVouchers];

            const paymentMethodId = $('#filterPaymentMethod').val();
            const searchText = $('#searchText').val().toLowerCase();

            if (paymentMethodId) {
                filtered = filtered.filter(v => v.paymentMethodId == paymentMethodId);
            }

            if (searchText) {
                filtered = filtered.filter(v =>
                    v.voucherNumber.toLowerCase().includes(searchText) ||
                    (v.challanNumber && v.challanNumber.toLowerCase().includes(searchText)) ||
                    (v.studentName && v.studentName.toLowerCase().includes(searchText)) ||
                    (v.rollNumber && v.rollNumber.toLowerCase().includes(searchText))
                );
            }

            renderList(filtered);
        }

        function updateSummary() {
            const today = new Date().toISOString().split('T')[0];
            const todayVouchers = allVouchers.filter(v =>
                v.paymentDate.split('T')[0] === today
            );

            const todayTotal = todayVouchers.reduce((sum, v) => sum + v.amountPaid, 0);
            const periodTotal = allVouchers.reduce((sum, v) => sum + v.amountPaid, 0);

            $('#todayCollection').text(formatCurrency(todayTotal));
            $('#totalVouchers').text(allVouchers.length);
            $('#totalAmount').text(formatCurrency(periodTotal));
            $('#summaryCards').show();
        }

        function renderList(items) {
            const tbody = $('#vouchersBody');
            tbody.empty();

            if (items.length === 0) {
                tbody.html('<tr><td colspan="9" class="text-center text-muted py-4">No fee voucher records found.</td></tr>');
                return;
            }

            items.forEach((item, index) => {
                const row = `
                    <tr data-id="${item.id}">
                        <td>${index + 1}</td>
                        <td><strong>${item.voucherNumber}</strong></td>
                        <td>${item.challanNumber || '-'}</td>
                        <td>
                            ${item.studentName}<br>
                            <small class="text-muted">${item.rollNumber || ''}</small>
                        </td>
                        <td>${item.paymentMethodName || '-'}</td>
                        <td>${formatDate(item.paymentDate)}</td>
                        <td class="text-end currency fw-bold text-success">${formatCurrency(item.amountPaid)}</td>
                        <td>${item.transactionReference || '-'}</td>
                        <td class="text-center">
                            <button type="button" class="btn btn-sm btn-warning me-1" onclick="printVoucher(${item.id})" title="Print">
                                <i class="bi bi-printer"></i>
                            </button>
                            <button type="button" class="btn btn-sm btn-info me-1" onclick="editVoucher(${item.id})" title="Edit">
                                <i class="bi bi-pencil"></i>
                            </button>
                            <button type="button" class="btn btn-sm btn-danger" onclick="deleteVoucher(${item.id})" title="Delete">
                                <i class="bi bi-trash"></i>
                            </button>
                        </td>
                    </tr>
                `;
                tbody.append(row);
            });
        }

        function formatDate(dateString) {
            const date = new Date(dateString);
            return date.toLocaleDateString('en-GB', { day: '2-digit', month: 'short', year: 'numeric' });
        }

        function formatCurrency(amount) {
            return new Intl.NumberFormat('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 }).format(amount || 0);
        }

        function printVoucher(id) {
            window.open(`/feevoucher/print/${id}`, '_blank');
        }

        function editVoucher(id) {
            window.location.href = `/feevoucher/form/${id}`;
        }

        async function deleteVoucher(id) {
            if (!confirm('Are you sure you want to delete this payment voucher? This will also update the challan balance.')) {
                return;
            }

            showLoading();
            try {
                const response = await fetch(`${API_BASE}/FeeVoucher/${id}`, {
                    method: 'DELETE'
                });

                if (response.ok) {
                    showAlert('Fee voucher deleted successfully!', 'success');
                    await loadVouchers();
                } else {
                    showAlert('Failed to delete fee voucher', 'danger');
                }
            } catch (error) {
                showAlert('Error deleting fee voucher: ' + error.message, 'danger');
            } finally {
                hideLoading();
            }
        }

        function clearFilters() {
            const today = new Date();
            const firstDay = new Date(today.getFullYear(), today.getMonth(), 1);
            $('#filterFromDate').val(firstDay.toISOString().split('T')[0]);
            $('#filterToDate').val(today.toISOString().split('T')[0]);
            $('#filterPaymentMethod').val('');
            $('#searchText').val('');
            loadVouchers();
        }

        function showLoading() {
            $('#loadingOverlay').show();
        }

        function hideLoading() {
            $('#loadingOverlay').hide();
        }

        function showAlert(message, type) {
            if (type === 'success') {
                toastSuccess(message);
            } else if (type === 'danger' || type === 'error') {
                toastError(message);
            } else if (type === 'warning') {
                toastWarning(message);
            } else {
                toastInfo(message);
            }
        }
    </script>
}
