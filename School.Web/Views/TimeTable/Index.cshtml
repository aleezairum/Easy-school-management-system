@{
    ViewData["Title"] = "Time Table";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<style>
    .card {
        border: none;
        border-radius: 16px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
        margin-bottom: 24px;
    }

    .card-header {
        background: white;
        border-bottom: 1px solid #e2e8f0;
        padding: 20px 24px;
        border-radius: 16px 16px 0 0 !important;
    }

    .card-header h5 {
        margin: 0;
        font-weight: 600;
        color: #1e293b;
    }

    .card-body {
        padding: 24px;
    }

    .form-label {
        font-weight: 500;
        color: #475569;
        margin-bottom: 8px;
        font-size: 14px;
    }

    .form-control, .form-select {
        border: 2px solid #e2e8f0;
        border-radius: 10px;
        padding: 10px 14px;
        font-size: 14px;
        transition: all 0.2s;
    }

    .form-control:focus, .form-select:focus {
        border-color: #008649;
        box-shadow: 0 0 0 4px rgba(0, 134, 73, 0.1);
    }

    .form-check-input {
        width: 18px;
        height: 18px;
        border: 2px solid #cbd5e1;
        border-radius: 4px;
        cursor: pointer;
    }

    .form-check-input:checked {
        background-color: #008649;
        border-color: #008649;
    }

    .btn-primary {
        background: linear-gradient(135deg, #008649 0%, #006d3b 100%);
        border: none;
        border-radius: 10px;
        padding: 10px 20px;
        font-weight: 600;
        font-size: 14px;
        transition: all 0.2s;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(0, 134, 73, 0.4);
        background: linear-gradient(135deg, #006d3b 0%, #005a30 100%);
    }

    .btn-secondary {
        background: #f1f5f9;
        border: 2px solid #e2e8f0;
        border-radius: 10px;
        padding: 10px 20px;
        font-weight: 600;
        font-size: 14px;
        color: #64748b;
        transition: all 0.2s;
    }

    .btn-secondary:hover {
        background: #e2e8f0;
        border-color: #cbd5e1;
        color: #475569;
    }

    .btn-info {
        background: linear-gradient(135deg, #0ea5e9 0%, #0284c7 100%);
        border: none;
        border-radius: 10px;
        padding: 10px 20px;
        font-weight: 600;
        font-size: 14px;
        color: white;
        transition: all 0.2s;
    }

    .btn-info:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(14, 165, 233, 0.4);
        color: white;
    }

    .btn-danger {
        background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        border: none;
        border-radius: 10px;
        padding: 10px 20px;
        font-weight: 600;
        font-size: 14px;
        color: white;
        transition: all 0.2s;
    }

    .btn-danger:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(239, 68, 68, 0.4);
        color: white;
    }

    .table {
        margin-bottom: 0;
    }

    .table thead th {
        background: #f8fafc;
        border-bottom: 2px solid #e2e8f0;
        padding: 14px 16px;
        font-weight: 600;
        font-size: 13px;
        color: #475569;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        white-space: nowrap;
    }

    .table tbody td {
        padding: 12px 16px;
        vertical-align: middle;
        border-bottom: 1px solid #f1f5f9;
        font-size: 14px;
    }

    .table tbody tr:hover {
        background: #f8fafc;
    }

    .table tbody tr.selected {
        background: #ecfdf5;
        border-left: 3px solid #008649;
    }

    .alert {
        border-radius: 12px;
        border: none;
        padding: 16px 20px;
    }

    .alert-success {
        background: #dcfce7;
        color: #166534;
    }

    .alert-danger {
        background: #fee2e2;
        color: #991b1b;
    }

    .loading-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(255, 255, 255, 0.8);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 100;
        border-radius: 16px;
    }

    .spinner-border {
        width: 3rem;
        height: 3rem;
        border-width: 0.3rem;
    }

    .form-section {
        background: #f8fafc;
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 20px;
    }

    .form-section-title {
        font-size: 14px;
        font-weight: 600;
        color: #64748b;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 16px;
        padding-bottom: 8px;
        border-bottom: 2px solid #e2e8f0;
    }

    .grid-section {
        margin-top: 24px;
    }

    .grid-section-title {
        font-size: 14px;
        font-weight: 600;
        color: #64748b;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 16px;
        padding-bottom: 8px;
        border-bottom: 2px solid #e2e8f0;
    }

    .filter-section {
        background: #f8fafc;
        border-radius: 12px;
        padding: 16px 20px;
        margin-bottom: 20px;
    }
</style>

<div class="container-fluid">
    <!-- Alert Messages -->
    <div id="alertContainer"></div>

    <!-- Time Table Card -->
    <div class="card">
        <div class="card-body position-relative">
            <div id="loadingOverlay" class="loading-overlay" style="display: none;">
                <div class="spinner-border text-success" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>

            <!-- Form Section -->
            <div class="form-section">
                <div class="form-section-title">
                    <i class="bi bi-pencil-square me-2"></i><span id="formTitle">Add New Time Table Entry</span>
                </div>
                <form id="timeTableForm">
                    <input type="hidden" id="timeTableId" value="0" />

                    <div class="row g-3">
                        <div class="col-md-2">
                            <label for="sessionId" class="form-label">Session <span class="text-danger">*</span></label>
                            <select class="form-select" id="sessionId" required>
                                <option value="">Select Session</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label for="classId" class="form-label">Class <span class="text-danger">*</span></label>
                            <select class="form-select" id="classId" required>
                                <option value="">Select Class</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label for="sectionId" class="form-label">Section <span class="text-danger">*</span></label>
                            <select class="form-select" id="sectionId" required>
                                <option value="">Select Section</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="subjectId" class="form-label">Subject <span class="text-danger">*</span></label>
                            <select class="form-select" id="subjectId" required>
                                <option value="">Select Subject</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="teacherId" class="form-label">Teacher <span class="text-danger">*</span></label>
                            <select class="form-select" id="teacherId" required>
                                <option value="">Select Teacher</option>
                            </select>
                        </div>
                    </div>

                    <div class="row g-3 mt-1">
                        <div class="col-md-2">
                            <label for="dayOfWeek" class="form-label">Day <span class="text-danger">*</span></label>
                            <select class="form-select" id="dayOfWeek" required>
                                <option value="1">Monday</option>
                                <option value="2">Tuesday</option>
                                <option value="3">Wednesday</option>
                                <option value="4">Thursday</option>
                                <option value="5">Friday</option>
                                <option value="6">Saturday</option>
                                <option value="0">Sunday</option>
                            </select>
                        </div>
                        <div class="col-md-1">
                            <label for="periodNumber" class="form-label">Period <span class="text-danger">*</span></label>
                            <input type="number" class="form-control" id="periodNumber" min="1" max="12" value="1" required />
                        </div>
                        <div class="col-md-2">
                            <label for="startTime" class="form-label">Start Time <span class="text-danger">*</span></label>
                            <input type="time" class="form-control" id="startTime" required />
                        </div>
                        <div class="col-md-2">
                            <label for="endTime" class="form-label">End Time <span class="text-danger">*</span></label>
                            <input type="time" class="form-control" id="endTime" required />
                        </div>
                        <div class="col-md-2">
                            <label for="roomNumber" class="form-label">Room</label>
                            <input type="text" class="form-control" id="roomNumber" placeholder="Room #" />
                        </div>
                        <div class="col-md-1">
                            <div class="form-check mt-4">
                                <input class="form-check-input" type="checkbox" id="isActive" checked />
                                <label class="form-check-label" for="isActive">Active</label>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">&nbsp;</label>
                            <div class="d-flex gap-2">
                                <button type="button" class="btn btn-primary" onclick="saveTimeTable()">
                                    <i class="bi bi-check-lg me-1"></i> Save
                                </button>
                                <button type="button" class="btn btn-secondary" onclick="resetForm()">
                                    <i class="bi bi-x-lg me-1"></i> Clear
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

            <!-- Grid Section -->
            <div class="grid-section">
                <div class="grid-section-title">
                    <i class="bi bi-table me-2"></i>Time Table List
                </div>
                <div class="table-responsive">
                    <table class="table table-hover" id="timeTableTable">
                        <thead>
                            <tr>
                                <th style="width: 60px;">Sr#</th>
                                <th>Day</th>
                                <th>Period</th>
                                <th>Time</th>
                                <th>Class</th>
                                <th>Section</th>
                                <th>Subject</th>
                                <th>Teacher</th>
                                <th>Room</th>
                                <th class="text-center" style="width: 80px;">Status</th>
                                <th class="text-center" style="width: 120px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody id="timeTableBody">
                            <!-- Time table entries will be loaded dynamically -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        //const API_BASE = 'http://localhost:5266/api';
        let editingId = 0;

        $(document).ready(function () {
            loadDropdowns();
            loadTimeTable();
        });

        async function loadDropdowns() {
            try {
                const [sessions, classes, sections, subjects, teachers] = await Promise.all([
                    fetch(`${API_BASE}/Session/dropdown`).then(r => r.json()).catch(() => []),
                    fetch(`${API_BASE}/Class/dropdown`).then(r => r.json()).catch(() => []),
                    fetch(`${API_BASE}/Section/dropdown`).then(r => r.json()).catch(() => []),
                    fetch(`${API_BASE}/Subject/dropdown`).then(r => r.json()).catch(() => []),
                    fetch(`${API_BASE}/Employee/dropdown`).then(r => r.json()).catch(() => [])
                ]);

                populateDropdown('sessionId', sessions, 'id', 'sessionName');
                populateDropdown('classId', classes, 'id', 'name');
                populateDropdown('sectionId', sections, 'id', 'name');
                populateDropdown('subjectId', subjects, 'id', 'name');
                populateDropdown('teacherId', teachers, 'id', 'fullName');
            } catch (error) {
                console.error('Error loading dropdowns:', error);
            }
        }

        function populateDropdown(elementId, data, valueField, textField) {
            const select = $(`#${elementId}`);
            const currentValue = select.val();
            select.find('option:not(:first)').remove();
            data.forEach(item => {
                select.append(`<option value="${item[valueField]}">${item[textField]}</option>`);
            });
            if (currentValue) select.val(currentValue);
        }

        async function loadTimeTable() {
            showLoading();
            try {
                const response = await fetch(`${API_BASE}/TimeTable`);
                if (response.ok) {
                    const data = await response.json();
                    renderList(data);
                } else {
                    showAlert('Failed to load time table', 'danger');
                }
            } catch (error) {
                console.error('Error loading time table:', error);
                showAlert('Error loading time table: ' + error.message, 'danger');
            } finally {
                hideLoading();
            }
        }

        function renderList(items) {
            const tbody = $('#timeTableBody');
            tbody.empty();

            if (items.length === 0) {
                tbody.html('<tr><td colspan="11" class="text-center text-muted py-4">No time table entries found. Add a new entry using the form above.</td></tr>');
                return;
            }

            items.forEach((item, index) => {
                const row = `
                    <tr data-id="${item.id}" class="${editingId === item.id ? 'selected' : ''}">
                        <td>${index + 1}</td>
                        <td><strong>${item.dayName}</strong></td>
                        <td>${item.periodNumber}</td>
                        <td>${item.startTime} - ${item.endTime}</td>
                        <td>${item.className || '-'}</td>
                        <td>${item.sectionName || '-'}</td>
                        <td>${item.subjectName || '-'}</td>
                        <td>${item.teacherName || '-'}</td>
                        <td>${item.roomNumber || '-'}</td>
                        <td class="text-center">
                            <span class="badge ${item.isActive ? 'bg-success' : 'bg-secondary'}">
                                ${item.isActive ? 'Active' : 'Inactive'}
                            </span>
                        </td>
                        <td class="text-center">
                            <button type="button" class="btn btn-sm btn-info me-1" onclick="editTimeTable(${item.id})" title="Edit">
                                <i class="bi bi-pencil"></i>
                            </button>
                            <button type="button" class="btn btn-sm btn-danger" onclick="deleteTimeTable(${item.id})" title="Delete">
                                <i class="bi bi-trash"></i>
                            </button>
                        </td>
                    </tr>
                `;
                tbody.append(row);
            });
        }

        async function editTimeTable(id) {
            showLoading();
            try {
                const response = await fetch(`${API_BASE}/TimeTable/${id}`);
                if (response.ok) {
                    const data = await response.json();
                    populateForm(data);
                    editingId = id;
                    $('#formTitle').text('Edit Time Table Entry');

                    $('#timeTableBody tr').removeClass('selected');
                    $(`#timeTableBody tr[data-id="${id}"]`).addClass('selected');

                    $('html, body').animate({
                        scrollTop: $('.form-section').offset().top - 100
                    }, 300);
                } else {
                    showAlert('Failed to load time table entry', 'danger');
                }
            } catch (error) {
                console.error('Error loading time table entry:', error);
                showAlert('Error loading time table entry: ' + error.message, 'danger');
            } finally {
                hideLoading();
            }
        }

        async function deleteTimeTable(id) {
            if (!confirm('Are you sure you want to delete this time table entry?')) {
                return;
            }

            showLoading();
            try {
                const response = await fetch(`${API_BASE}/TimeTable/${id}`, {
                    method: 'DELETE',
                    headers: { 'Content-Type': 'application/json' }
                });

                if (response.ok) {
                    showAlert('Time table entry deleted successfully!', 'success');
                    if (editingId === id) {
                        resetForm();
                    }
                    await loadTimeTable();
                } else {
                    const error = await response.json();
                    showAlert(error.message || 'Failed to delete time table entry', 'danger');
                }
            } catch (error) {
                console.error('Error deleting time table entry:', error);
                showAlert('Error deleting time table entry: ' + error.message, 'danger');
            } finally {
                hideLoading();
            }
        }

        function populateForm(data) {
            $('#timeTableId').val(data.id);
            $('#sessionId').val(data.sessionId);
            $('#classId').val(data.classId);
            $('#sectionId').val(data.sectionId);
            $('#subjectId').val(data.subjectId);
            $('#teacherId').val(data.teacherId);
            $('#dayOfWeek').val(data.dayOfWeek);
            $('#periodNumber').val(data.periodNumber);
            $('#startTime').val(formatTimeForInput(data.startTime));
            $('#endTime').val(formatTimeForInput(data.endTime));
            $('#roomNumber').val(data.roomNumber);
            $('#isActive').prop('checked', data.isActive);
        }

        function formatTimeForInput(timeSpan) {
            if (!timeSpan) return '';
            const parts = timeSpan.split(':');
            return `${parts[0].padStart(2, '0')}:${parts[1].padStart(2, '0')}`;
        }

        function resetForm() {
            $('#timeTableId').val('0');
            $('#sessionId').val('');
            $('#classId').val('');
            $('#sectionId').val('');
            $('#subjectId').val('');
            $('#teacherId').val('');
            $('#dayOfWeek').val('1');
            $('#periodNumber').val('1');
            $('#startTime').val('');
            $('#endTime').val('');
            $('#roomNumber').val('');
            $('#isActive').prop('checked', true);
            $('#formTitle').text('Add New Time Table Entry');
            editingId = 0;
            $('#timeTableBody tr').removeClass('selected');
        }

        async function saveTimeTable() {
            const sessionId = $('#sessionId').val();
            const classId = $('#classId').val();
            const sectionId = $('#sectionId').val();
            const subjectId = $('#subjectId').val();
            const teacherId = $('#teacherId').val();
            const startTime = $('#startTime').val();
            const endTime = $('#endTime').val();

            if (!sessionId || !classId || !sectionId || !subjectId || !teacherId || !startTime || !endTime) {
                showAlert('Please fill all required fields', 'danger');
                return;
            }

            const id = parseInt($('#timeTableId').val()) || 0;
            const data = {
                ClassId: parseInt(classId),
                SectionId: parseInt(sectionId),
                SubjectId: parseInt(subjectId),
                TeacherId: parseInt(teacherId),
                SessionId: parseInt(sessionId),
                DayOfWeek: parseInt($('#dayOfWeek').val()),
                PeriodNumber: parseInt($('#periodNumber').val()),
                StartTime: startTime + ':00',
                EndTime: endTime + ':00',
                RoomNumber: $('#roomNumber').val().trim() || null,
                IsActive: $('#isActive').is(':checked')
            };

            showLoading();
            try {
                let response;
                if (id === 0) {
                    response = await fetch(`${API_BASE}/TimeTable`, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(data)
                    });
                } else {
                    response = await fetch(`${API_BASE}/TimeTable/${id}`, {
                        method: 'PUT',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(data)
                    });
                }

                if (response.ok) {
                    showAlert('Time table entry saved successfully!', 'success');
                    resetForm();
                    await loadTimeTable();
                } else {
                    const error = await response.json();
                    showAlert(error.message || 'Failed to save time table entry', 'danger');
                }
            } catch (error) {
                console.error('Error saving time table entry:', error);
                showAlert('Error saving time table entry: ' + error.message, 'danger');
            } finally {
                hideLoading();
            }
        }

        function showLoading() {
            $('#loadingOverlay').show();
        }

        function hideLoading() {
            $('#loadingOverlay').hide();
        }

        function showAlert(message, type) {
            if (type === 'success') {
                toastSuccess(message);
            } else if (type === 'danger' || type === 'error') {
                toastError(message);
            } else if (type === 'warning') {
                toastWarning(message);
            } else {
                toastInfo(message);
            }
        }
    </script>
}
