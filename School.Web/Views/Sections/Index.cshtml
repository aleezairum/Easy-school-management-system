@{
    ViewData["Title"] = "Section Management";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<style>
    .card {
        border: none;
        border-radius: 16px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
        margin-bottom: 24px;
    }

    .card-header {
        background: white;
        border-bottom: 1px solid #e2e8f0;
        padding: 20px 24px;
        border-radius: 16px 16px 0 0 !important;
    }

    .card-header h5 {
        margin: 0;
        font-weight: 600;
        color: #1e293b;
    }

    .card-body {
        padding: 24px;
    }

    .form-label {
        font-weight: 500;
        color: #475569;
        margin-bottom: 8px;
        font-size: 14px;
    }

    .form-control, .form-select {
        border: 2px solid #e2e8f0;
        border-radius: 10px;
        padding: 10px 14px;
        font-size: 14px;
        transition: all 0.2s;
    }

    .form-control:focus, .form-select:focus {
        border-color: #008649;
        box-shadow: 0 0 0 4px rgba(0, 134, 73, 0.1);
    }

    .form-check-input {
        width: 18px;
        height: 18px;
        border: 2px solid #cbd5e1;
        border-radius: 4px;
        cursor: pointer;
    }

    .form-check-input:checked {
        background-color: #008649;
        border-color: #008649;
    }

    .form-check-input:focus {
        box-shadow: 0 0 0 4px rgba(0, 134, 73, 0.1);
    }

    .btn-primary {
        background: linear-gradient(135deg, #008649 0%, #006d3b 100%);
        border: none;
        border-radius: 10px;
        padding: 10px 20px;
        font-weight: 600;
        font-size: 14px;
        transition: all 0.2s;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(0, 134, 73, 0.4);
        background: linear-gradient(135deg, #006d3b 0%, #005a30 100%);
    }

    .btn-secondary {
        background: #f1f5f9;
        border: 2px solid #e2e8f0;
        border-radius: 10px;
        padding: 10px 20px;
        font-weight: 600;
        font-size: 14px;
        color: #64748b;
        transition: all 0.2s;
    }

    .btn-secondary:hover {
        background: #e2e8f0;
        border-color: #cbd5e1;
        color: #475569;
    }

    .btn-info {
        background: linear-gradient(135deg, #0ea5e9 0%, #0284c7 100%);
        border: none;
        border-radius: 8px;
        padding: 6px 12px;
        font-weight: 600;
        font-size: 13px;
        color: white;
        transition: all 0.2s;
    }

    .btn-info:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(14, 165, 233, 0.4);
        color: white;
    }

    .btn-danger {
        background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        border: none;
        border-radius: 8px;
        padding: 6px 12px;
        font-weight: 600;
        font-size: 13px;
        color: white;
        transition: all 0.2s;
    }

    .btn-danger:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(239, 68, 68, 0.4);
        color: white;
    }

    .table {
        margin-bottom: 0;
    }

    .table thead th {
        background: #f8fafc;
        border-bottom: 2px solid #e2e8f0;
        padding: 14px 16px;
        font-weight: 600;
        font-size: 13px;
        color: #475569;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        white-space: nowrap;
    }

    .table tbody td {
        padding: 12px 16px;
        vertical-align: middle;
        border-bottom: 1px solid #f1f5f9;
        font-size: 14px;
    }

    .table tbody tr:hover {
        background: #f8fafc;
    }

    .table tbody tr.selected {
        background: #ecfdf5;
        border-left: 3px solid #008649;
    }

    .alert {
        border-radius: 12px;
        border: none;
        padding: 16px 20px;
    }

    .alert-success {
        background: #dcfce7;
        color: #166534;
    }

    .alert-danger {
        background: #fee2e2;
        color: #991b1b;
    }

    .loading-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(255, 255, 255, 0.8);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 100;
        border-radius: 16px;
    }

    .spinner-border {
        width: 3rem;
        height: 3rem;
        border-width: 0.3rem;
    }

    .form-section {
        background: #f8fafc;
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 20px;
    }

    .form-section-title {
        font-size: 14px;
        font-weight: 600;
        color: #64748b;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 16px;
        padding-bottom: 8px;
        border-bottom: 2px solid #e2e8f0;
    }

    .grid-section {
        margin-top: 24px;
    }

    .grid-section-title {
        font-size: 14px;
        font-weight: 600;
        color: #64748b;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 16px;
        padding-bottom: 8px;
        border-bottom: 2px solid #e2e8f0;
    }

    .filter-section {
        background: #f0fdf4;
        border: 1px solid #bbf7d0;
        border-radius: 12px;
        padding: 16px 20px;
        margin-bottom: 20px;
    }
</style>

<div class="container-fluid">
    <!-- Alert Messages -->
    <div id="alertContainer"></div>

    <!-- Sections Card -->
    <div class="card">
        <div class="card-header">
            <h5><i class="bi bi-diagram-3-fill me-2"></i>Section Management</h5>
        </div>
        <div class="card-body position-relative">
            <div id="loadingOverlay" class="loading-overlay" style="display: none;">
                <div class="spinner-border text-success" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>

            <!-- Form Section -->
            <div class="form-section">
                <div class="form-section-title">
                    <i class="bi bi-pencil-square me-2"></i><span id="formTitle">Add New Section</span>
                </div>
                <form id="sectionForm">
                    <input type="hidden" id="sectionId" value="0" />

                    <div class="row g-3 align-items-end">
                        <div class="col-md-3">
                            <label for="classId" class="form-label">Class <span class="text-danger">*</span></label>
                            <select class="form-select" id="classId" required>
                                <option value="">-- Select Class --</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="sectionName" class="form-label">Section Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="sectionName" placeholder="e.g., Section A, Section B" required />
                        </div>
                        <div class="col-md-2">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="isActive" checked />
                                <label class="form-check-label" for="isActive">Active</label>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="d-flex gap-2">
                                <button type="button" class="btn btn-primary" onclick="saveSection()">
                                    <i class="bi bi-check-lg me-1"></i> Save
                                </button>
                                <button type="button" class="btn btn-secondary" onclick="resetForm()">
                                    <i class="bi bi-x-lg me-1"></i> Clear
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

            <!-- Filter Section -->
            <div class="filter-section">
                <div class="row align-items-center">
                    <div class="col-md-3">
                        <label for="filterClass" class="form-label mb-0 me-2"><i class="bi bi-funnel me-1"></i>Filter by Class:</label>
                    </div>
                    <div class="col-md-4">
                        <select class="form-select" id="filterClass" onchange="loadSections()">
                            <option value="">All Classes</option>
                        </select>
                    </div>
                </div>
            </div>

            <!-- Grid Section -->
            <div class="grid-section">
                <div class="grid-section-title">
                    <i class="bi bi-table me-2"></i>Sections List
                </div>
                <div class="table-responsive">
                    <table class="table table-hover" id="sectionsTable">
                        <thead>
                            <tr>
                                <th style="width: 60px;">Sr#</th>
                                <th>Section Name</th>
                                <th>Class</th>
                                <th class="text-center" style="width: 100px;">Status</th>
                                <th class="text-center" style="width: 150px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody id="sectionsBody">
                            <!-- Sections will be loaded dynamically -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const API_BASE = 'http://localhost:5266/api';
        let editingSectionId = 0;

        $(document).ready(function () {
            loadClasses();
            loadSections();
        });

        // Load classes for dropdown
        async function loadClasses() {
            try {
                const response = await fetch(`${API_BASE}/class/dropdown`);
                if (response.ok) {
                    const classes = await response.json();
                    const formSelect = $('#classId');
                    const filterSelect = $('#filterClass');

                    formSelect.find('option:not(:first)').remove();
                    filterSelect.find('option:not(:first)').remove();

                    classes.forEach(cls => {
                        formSelect.append(`<option value="${cls.viD}">${cls.vName}</option>`);
                        filterSelect.append(`<option value="${cls.viD}">${cls.vName}</option>`);
                    });
                }
            } catch (error) {
                console.error('Error loading classes:', error);
            }
        }

        // Load sections
        async function loadSections() {
            showLoading();
            try {
                const filterClass = $('#filterClass').val();
                let url = `${API_BASE}/section`;
                if (filterClass) {
                    url += `?classId=${filterClass}`;
                }

                const response = await fetch(url);
                if (response.ok) {
                    const sections = await response.json();
                    renderSectionsList(sections);
                } else {
                    showAlert('Failed to load sections', 'danger');
                }
            } catch (error) {
                console.error('Error loading sections:', error);
                showAlert('Error loading sections: ' + error.message, 'danger');
            } finally {
                hideLoading();
            }
        }

        // Render sections list table
        function renderSectionsList(sections) {
            const tbody = $('#sectionsBody');
            tbody.empty();

            if (sections.length === 0) {
                tbody.html('<tr><td colspan="5" class="text-center text-muted py-4">No sections found. Add a new section using the form above.</td></tr>');
                return;
            }

            sections.forEach((section, index) => {
                const row = `
                    <tr data-id="${section.viD}" class="${editingSectionId === section.viD ? 'selected' : ''}">
                        <td>${index + 1}</td>
                        <td><strong>${section.vName}</strong></td>
                        <td><span class="badge bg-info">${section.className}</span></td>
                        <td class="text-center">
                            <span class="badge ${section.isActive ? 'bg-success' : 'bg-secondary'}">
                                ${section.isActive ? 'Active' : 'Inactive'}
                            </span>
                        </td>
                        <td class="text-center">
                            <button type="button" class="btn btn-sm btn-info me-1" onclick="editSection(${section.viD})" title="Edit">
                                <i class="bi bi-pencil"></i>
                            </button>
                            <button type="button" class="btn btn-sm btn-danger" onclick="deleteSection(${section.viD}, '${section.vName}')" title="Delete">
                                <i class="bi bi-trash"></i>
                            </button>
                        </td>
                    </tr>
                `;
                tbody.append(row);
            });
        }

        // Edit existing section
        async function editSection(sectionId) {
            showLoading();
            try {
                const response = await fetch(`${API_BASE}/section/${sectionId}`);
                if (response.ok) {
                    const data = await response.json();
                    populateForm(data);
                    editingSectionId = sectionId;
                    $('#formTitle').text('Edit Section');

                    // Highlight the selected row
                    $('#sectionsBody tr').removeClass('selected');
                    $(`#sectionsBody tr[data-id="${sectionId}"]`).addClass('selected');

                    // Scroll to form
                    $('html, body').animate({
                        scrollTop: $('.form-section').offset().top - 100
                    }, 300);
                } else {
                    showAlert('Failed to load section', 'danger');
                }
            } catch (error) {
                console.error('Error loading section:', error);
                showAlert('Error loading section: ' + error.message, 'danger');
            } finally {
                hideLoading();
            }
        }

        // Delete section
        async function deleteSection(sectionId, sectionName) {
            if (!confirm(`Are you sure you want to delete the section "${sectionName}"?`)) {
                return;
            }

            showLoading();
            try {
                const response = await fetch(`${API_BASE}/section/${sectionId}`, {
                    method: 'DELETE'
                });

                if (response.ok) {
                    showAlert('Section deleted successfully!', 'success');
                    if (editingSectionId === sectionId) {
                        resetForm();
                    }
                    await loadSections();
                } else {
                    const error = await response.json();
                    showAlert(error.message || 'Failed to delete section', 'danger');
                }
            } catch (error) {
                console.error('Error deleting section:', error);
                showAlert('Error deleting section: ' + error.message, 'danger');
            } finally {
                hideLoading();
            }
        }

        // Populate form with section data
        function populateForm(data) {
            $('#sectionId').val(data.viD);
            $('#classId').val(data.classID);
            $('#sectionName').val(data.vName);
            $('#isActive').prop('checked', data.isActive);
        }

        // Reset form
        function resetForm() {
            $('#sectionId').val('0');
            $('#classId').val('');
            $('#sectionName').val('');
            $('#isActive').prop('checked', true);
            $('#formTitle').text('Add New Section');
            editingSectionId = 0;

            // Remove selected highlight from table
            $('#sectionsBody tr').removeClass('selected');
        }

        // Save section
        async function saveSection() {
            const classId = parseInt($('#classId').val()) || 0;
            const sectionName = $('#sectionName').val().trim();

            if (!classId) {
                showAlert('Please select a class', 'danger');
                $('#classId').focus();
                return;
            }

            if (!sectionName) {
                showAlert('Please enter a section name', 'danger');
                $('#sectionName').focus();
                return;
            }

            const sectionId = parseInt($('#sectionId').val()) || 0;
            const data = {
                VID: sectionId,
                ClassID: classId,
                VName: sectionName,
                IsActive: $('#isActive').is(':checked')
            };

            showLoading();
            try {
                let response;
                if (sectionId === 0) {
                    // Create new section
                    response = await fetch(`${API_BASE}/section`, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(data)
                    });
                } else {
                    // Update existing section
                    response = await fetch(`${API_BASE}/section/${sectionId}`, {
                        method: 'PUT',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(data)
                    });
                }

                if (response.ok) {
                    showAlert(sectionId === 0 ? 'Section created successfully!' : 'Section updated successfully!', 'success');
                    resetForm();
                    await loadSections();
                } else {
                    const error = await response.json();
                    showAlert(error.message || 'Failed to save section', 'danger');
                }
            } catch (error) {
                console.error('Error saving section:', error);
                showAlert('Error saving section: ' + error.message, 'danger');
            } finally {
                hideLoading();
            }
        }

        // Helper functions
        function showLoading() {
            $('#loadingOverlay').show();
        }

        function hideLoading() {
            $('#loadingOverlay').hide();
        }

        function showAlert(message, type) {
            const alert = `
                <div class="alert alert-${type} alert-dismissible fade show" role="alert">
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            `;
            $('#alertContainer').html(alert);

            // Auto-hide after 5 seconds
            setTimeout(() => {
                $('.alert').alert('close');
            }, 5000);
        }
    </script>
}
