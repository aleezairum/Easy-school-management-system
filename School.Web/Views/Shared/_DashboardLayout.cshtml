    <script>
        // ==================== TOAST NOTIFICATION SYSTEM ====================
        const Toast = {
            container: null,

            init() {
                this.container = document.getElementById('toastContainer');
            },

            show(type, title, message, duration = 5000) {
                if (!this.container) this.init();

                const icons = {
                    success: 'bi-check-lg',
                    error: 'bi-x-lg',
                    warning: 'bi-exclamation-lg',
                    info: 'bi-info-lg'
                };

                const id = 'toast-' + Date.now();
                const toast = document.createElement('div');
                toast.className = `toast-item ${type}`;
                toast.id = id;
                toast.style.position = 'relative';
                toast.style.overflow = 'hidden';

                toast.innerHTML = `
                    <div class="toast-icon">
                        <i class="bi ${icons[type]}"></i>
                    </div>
                    <div class="toast-content">
                        <div class="toast-title">${title}</div>
                        <div class="toast-message">${message}</div>
                    </div>
                    <button class="toast-close" onclick="Toast.close('${id}')">&times;</button>
                    <div class="toast-progress" style="animation-duration: ${duration}ms;"></div>
                `;

                this.container.appendChild(toast);

                // Auto remove after duration
                setTimeout(() => this.close(id), duration);

                return id;
            },

            close(id) {
                const toast = document.getElementById(id);
                if (toast) {
                    toast.classList.add('hiding');
                    setTimeout(() => toast.remove(), 300);
                }
            },

            success(message, title = 'Success') {
                return this.show('success', title, message);
            },

            error(message, title = 'Error') {
                return this.show('error', title, message, 7000);
            },

            warning(message, title = 'Warning') {
                return this.show('warning', title, message);
            },

            info(message, title = 'Info') {
                return this.show('info', title, message);
            }
        };

        // Initialize toast on page load
        document.addEventListener('DOMContentLoaded', () => Toast.init());

        // Global function aliases for easy use
        function toastSuccess(message, title) { return Toast.success(message, title); }
        function toastError(message, title) { return Toast.error(message, title); }
        function toastWarning(message, title) { return Toast.warning(message, title); }
        function toastInfo(message, title) { return Toast.info(message, title); }
    </script>
    <script>
        // Toggle Sidebar collapse/expand
        function toggleSidebar() {
            const sidebar = document.querySelector('.sidebar');
            const mainContent = document.querySelector('.main-content');
            const hamburgerIcon = document.getElementById('hamburgerIcon');
            const overlay = document.getElementById('sidebarOverlay');
            const isMobile = window.innerWidth <= 991;

            if (isMobile) {
                // Mobile: slide sidebar in/out with overlay
                sidebar.classList.toggle('mobile-open');
                overlay.classList.toggle('active');
            } else {
                // Desktop: collapse/expand sidebar
                sidebar.classList.toggle('collapsed');
                mainContent.classList.toggle('expanded');

                if (sidebar.classList.contains('collapsed')) {
                    hamburgerIcon.classList.remove('bi-list');
                    hamburgerIcon.classList.add('bi-chevron-right');
                    localStorage.setItem('sidebarCollapsed', 'true');
                } else {
                    hamburgerIcon.classList.remove('bi-chevron-right');
                    hamburgerIcon.classList.add('bi-list');
                    localStorage.setItem('sidebarCollapsed', 'false');
                }
            }
        }

        function closeMobileSidebar() {
            const sidebar = document.querySelector('.sidebar');
            const overlay = document.getElementById('sidebarOverlay');
            sidebar.classList.remove('mobile-open');
            overlay.classList.remove('active');
        }

        // Toggle menu section collapse/expand
        function toggleMenuSection(sectionId) {
            const section = document.getElementById(sectionId);
            if (section) {
                section.classList.toggle('collapsed');
                // Save state to localStorage (expanded = user opened it)
                if (section.classList.contains('collapsed')) {
                    localStorage.removeItem(`sidebar-${sectionId}`);
                } else {
                    localStorage.setItem(`sidebar-${sectionId}`, 'expanded');
                }
            }
        }

        // Toggle submenu collapse/expand (accordion behavior - only one open at a time)
        function toggleSubmenu(submenuId) {
            const submenu = document.getElementById(submenuId);
            const parentItem = submenu?.previousElementSibling;

            if (submenu && parentItem) {
                const isCurrentlyOpen = submenu.classList.contains('open');

                // Close all other submenus first (accordion behavior)
                document.querySelectorAll('.submenu.open').forEach(openSubmenu => {
                    if (openSubmenu.id !== submenuId) {
                        openSubmenu.classList.remove('open');
                        openSubmenu.previousElementSibling?.classList.remove('expanded');
                        localStorage.removeItem(`sidebar-${openSubmenu.id}`);
                    }
                });

                // Toggle current submenu
                submenu.classList.toggle('open');
                parentItem.classList.toggle('expanded');

                // Save state to localStorage
                if (submenu.classList.contains('open')) {
                    localStorage.setItem(`sidebar-${submenuId}`, 'open');
                } else {
                    localStorage.removeItem(`sidebar-${submenuId}`);
                }
            }
        }

        // Restore sidebar state on page load
        function restoreSidebarState() {
            const isCollapsed = localStorage.getItem('sidebarCollapsed') === 'true';
            if (isCollapsed) {
                const sidebar = document.querySelector('.sidebar');
                const mainContent = document.querySelector('.main-content');
                const hamburgerIcon = document.getElementById('hamburgerIcon');

                sidebar.classList.add('collapsed');
                mainContent.classList.add('expanded');
                hamburgerIcon.classList.remove('bi-list');
                hamburgerIcon.classList.add('bi-chevron-right');
            }
        }

        // Toggle user dropdown
        function toggleUserDropdown(event) {
            event.stopPropagation();
            const dropdown = document.getElementById('userDropdown');
            dropdown.classList.toggle('show');
        }

        // Close dropdown when clicking outside
        document.addEventListener('click', function(event) {
            const dropdown = document.getElementById('userDropdown');
            const userWrapper = document.querySelector('.header-user-wrapper');

            if (!userWrapper.contains(event.target)) {
                dropdown.classList.remove('show');
            }
        });

        // Open Switch Credentials Modal
        function openSwitchCredentials(event) {
            event.preventDefault();
            document.getElementById('userDropdown').classList.remove('show');
            loadInstitutes();
            loadSessions();
            const modal = new bootstrap.Modal(document.getElementById('switchCredentialsModal'));
            modal.show();
        }

        function loadInstitutes() {
            fetch('http://localhost:5266/api/institute')
                .then(response => response.json())
                .then(institutes => {
                    const select = document.getElementById('instituteSelect');
                    select.innerHTML = '<option value="" disabled selected>Select Institute</option>';
                    institutes.forEach(institute => {
                        const option = document.createElement('option');
                        option.value = institute.id;
                        option.textContent = institute.name;
                        select.appendChild(option);
                    });
                })
                .catch(error => {
                    console.error('Error loading institutes:', error);
                });
        }

        function loadSessions() {
            fetch('http://localhost:5266/api/session')
                .then(response => response.json())
                .then(sessions => {
                    const select = document.getElementById('sessionSelect');
                    select.innerHTML = '<option value="" disabled selected>Select Session</option>';
                    sessions.forEach(session => {
                        const option = document.createElement('option');
                        option.value = session.id;
                        option.textContent = session.sessionName;
                        if (session.isCurrent) {
                            option.selected = true;
                        }
                        select.appendChild(option);
                    });
                })
                .catch(error => {
                    console.error('Error loading sessions:', error);
                });
        }

        // Apply switch credentials
        function applySwitchCredentials() {
            const instituteId = document.getElementById('instituteSelect').value;
            const sessionId = document.getElementById('sessionSelect').value;

            if (!instituteId || !sessionId) {
                toastWarning('Please select both Institute and Session');
                return;
            }

            // Store selected values
            localStorage.setItem('selectedInstitute', instituteId);
            localStorage.setItem('selectedSession', sessionId);

            // Close modal and reload page
            bootstrap.Modal.getInstance(document.getElementById('switchCredentialsModal')).hide();
            location.reload();
        }

        // Close dropdown on Escape key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                document.getElementById('userDropdown').classList.remove('show');
            }
        });

        // Load sidebar data from API
        function loadSidebarData() {
            fetch('http://localhost:5266/api/sidebar')
                .then(response => response.json())
                .then(data => {
                    // Update institute name and tagline
                    document.getElementById('sidebarInstituteName').textContent = data.instituteName;
                    document.getElementById('sidebarInstituteTagline').textContent = data.instituteTagline;

                    // Update logo if provided
                    if (data.logoUrl) {
                        document.getElementById('sidebarLogo').src = data.logoUrl;
                    }

                    // Build menu HTML
                    const menuContainer = document.getElementById('sidebarMenu');
                    let menuHtml = '';

                    const currentPath = window.location.pathname;
                    // No submenu expanded by default - user must click to expand

                    data.menuSections.forEach((section, index) => {
                        const sectionId = `menu-section-${index}`;
                        // All sections collapsed by default - only expand if user manually opened
                        const isExpanded = localStorage.getItem(`sidebar-${sectionId}`) === 'expanded';
                        const collapsedClass = isExpanded ? '' : 'collapsed';

                        menuHtml += `<div class="menu-section ${collapsedClass}" id="${sectionId}">`;
                        menuHtml += `<div class="menu-section-title" onclick="toggleMenuSection('${sectionId}')">
                            <span><i class="bi ${section.icon} me-2"></i>${section.title}</span>
                            <i class="bi bi-chevron-down section-toggle"></i>
                        </div>`;
                        menuHtml += `<div class="menu-section-items">`;

                        section.items.forEach(item => {
                            // Check if item has children (sub-menu)
                            if (item.children && item.children.length > 0) {
                                const submenuId = `submenu-${item.id}`;
                                // All submenus collapsed on load - user must expand manually
                                const expandedClass = '';
                                const openClass = '';

                                menuHtml += `
                                    <div class="menu-item-parent ${expandedClass}" onclick="toggleSubmenu('${submenuId}')">
                                        <div class="parent-left">
                                            <i class="bi ${item.icon}"></i>
                                            <span>${item.title}</span>
                                        </div>
                                        <i class="bi bi-chevron-down submenu-toggle"></i>
                                    </div>
                                    <div class="submenu ${openClass}" id="${submenuId}">
                                `;

                                item.children.forEach(child => {
                                    const isChildActive = currentPath.toLowerCase().startsWith(child.url.toLowerCase());
                                    const childActiveClass = isChildActive ? 'active' : '';
                                    const childBadgeHtml = child.badge ? `<span class="badge">${child.badge}</span>` : '';

                                    menuHtml += `
                                        <a href="${child.url}" class="menu-item ${childActiveClass}">
                                            <i class="bi ${child.icon}"></i>
                                            <span>${child.title}</span>
                                            ${childBadgeHtml}
                                        </a>
                                    `;
                                });

                                menuHtml += `</div>`;
                            } else {
                                // Regular menu item without children
                                const isActive = currentPath.toLowerCase().startsWith(item.url.toLowerCase()) ||
                                               (item.url === '/Dashboard' && currentPath === '/');
                                const activeClass = isActive ? 'active' : '';
                                const badgeHtml = item.badge ? `<span class="badge">${item.badge}</span>` : '';

                                menuHtml += `
                                    <a href="${item.url}" class="menu-item ${activeClass}">
                                        <i class="bi ${item.icon}"></i>
                                        <span>${item.title}</span>
                                        ${badgeHtml}
                                    </a>
                                `;
                            }
                        });

                        menuHtml += `</div></div>`;
                    });

                    menuContainer.innerHTML = menuHtml;
                })
                .catch(error => {
                    console.error('Error loading sidebar data:', error);
                    document.getElementById('sidebarMenu').innerHTML = '<div class="text-center py-4 text-light">Failed to load menu</div>';
                });
        }

        // Load sidebar on page load
        document.addEventListener('DOMContentLoaded', function() {
            loadSidebarData();
            restoreSidebarState();
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
