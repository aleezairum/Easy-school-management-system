@{
    ViewData["Title"] = "HR Grades";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<style>
    .card {
        border: none;
        border-radius: 16px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
        margin-bottom: 24px;
    }

    .card-header {
        background: white;
        border-bottom: 1px solid #e2e8f0;
        padding: 20px 24px;
        border-radius: 16px 16px 0 0 !important;
    }

    .card-header h5 {
        margin: 0;
        font-weight: 600;
        color: #1e293b;
    }

    .card-body {
        padding: 24px;
    }

    .form-label {
        font-weight: 500;
        color: #475569;
        margin-bottom: 8px;
        font-size: 14px;
    }

    .form-control, .form-select {
        border: 2px solid #e2e8f0;
        border-radius: 10px;
        padding: 10px 14px;
        font-size: 14px;
        transition: all 0.2s;
    }

    .form-control:focus, .form-select:focus {
        border-color: #008649;
        box-shadow: 0 0 0 4px rgba(0, 134, 73, 0.1);
    }

    .form-check-input {
        width: 18px;
        height: 18px;
        border: 2px solid #cbd5e1;
        border-radius: 4px;
        cursor: pointer;
    }

    .form-check-input:checked {
        background-color: #008649;
        border-color: #008649;
    }

    .btn-primary {
        background: linear-gradient(135deg, #008649 0%, #006d3b 100%);
        border: none;
        border-radius: 10px;
        padding: 10px 20px;
        font-weight: 600;
        font-size: 14px;
        transition: all 0.2s;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(0, 134, 73, 0.4);
        background: linear-gradient(135deg, #006d3b 0%, #005a30 100%);
    }

    .btn-secondary {
        background: #f1f5f9;
        border: 2px solid #e2e8f0;
        border-radius: 10px;
        padding: 10px 20px;
        font-weight: 600;
        font-size: 14px;
        color: #64748b;
        transition: all 0.2s;
    }

    .btn-secondary:hover {
        background: #e2e8f0;
        border-color: #cbd5e1;
        color: #475569;
    }

    .btn-info {
        background: linear-gradient(135deg, #0ea5e9 0%, #0284c7 100%);
        border: none;
        border-radius: 10px;
        padding: 10px 20px;
        font-weight: 600;
        font-size: 14px;
        color: white;
        transition: all 0.2s;
    }

    .btn-info:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(14, 165, 233, 0.4);
        color: white;
    }

    .btn-danger {
        background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        border: none;
        border-radius: 10px;
        padding: 10px 20px;
        font-weight: 600;
        font-size: 14px;
        color: white;
        transition: all 0.2s;
    }

    .btn-danger:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(239, 68, 68, 0.4);
        color: white;
    }

    .table {
        margin-bottom: 0;
    }

    .table thead th {
        background: #f8fafc;
        border-bottom: 2px solid #e2e8f0;
        padding: 14px 16px;
        font-weight: 600;
        font-size: 13px;
        color: #475569;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        white-space: nowrap;
    }

    .table tbody td {
        padding: 12px 16px;
        vertical-align: middle;
        border-bottom: 1px solid #f1f5f9;
        font-size: 14px;
    }

    .table tbody tr:hover {
        background: #f8fafc;
    }

    .table tbody tr.selected {
        background: #ecfdf5;
        border-left: 3px solid #008649;
    }

    .alert {
        border-radius: 12px;
        border: none;
        padding: 16px 20px;
    }

    .alert-success {
        background: #dcfce7;
        color: #166534;
    }

    .alert-danger {
        background: #fee2e2;
        color: #991b1b;
    }

    .loading-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(255, 255, 255, 0.8);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 100;
        border-radius: 16px;
    }

    .spinner-border {
        width: 3rem;
        height: 3rem;
        border-width: 0.3rem;
    }

    .form-section {
        background: #f8fafc;
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 20px;
    }

    .form-section-title {
        font-size: 14px;
        font-weight: 600;
        color: #64748b;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 16px;
        padding-bottom: 8px;
        border-bottom: 2px solid #e2e8f0;
    }

    .grid-section {
        margin-top: 24px;
    }

    .grid-section-title {
        font-size: 14px;
        font-weight: 600;
        color: #64748b;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 16px;
        padding-bottom: 8px;
        border-bottom: 2px solid #e2e8f0;
    }
</style>

<div class="container-fluid">
    <!-- Alert Messages -->
    <div id="alertContainer"></div>

    <!-- HR Grades Card -->
    <div class="card">
        <div class="card-header">
            <h5><i class="bi bi-award me-2"></i>HR Grades</h5>
        </div>
        <div class="card-body position-relative">
            <div id="loadingOverlay" class="loading-overlay" style="display: none;">
                <div class="spinner-border text-success" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>

            <!-- Form Section -->
            <div class="form-section">
                <div class="form-section-title">
                    <i class="bi bi-pencil-square me-2"></i><span id="formTitle">Add New HR Grade</span>
                </div>
                <form id="hrgradeForm">
                    <input type="hidden" id="gradeId" name="Id" value="0" />

                    <div class="row g-3 align-items-end">
                        <div class="col-md-2">
                            <label for="code" class="form-label">Grade Code <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="code" name="Code"
                                   placeholder="e.g., G-1" required />
                        </div>
                        <div class="col-md-2">
                            <label for="name" class="form-label">Grade Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="name" name="Name"
                                   placeholder="e.g., Grade 1" required />
                        </div>
                        <div class="col-md-2">
                            <label for="minSalary" class="form-label">Min Salary</label>
                            <input type="number" class="form-control" id="minSalary" name="MinSalary" value="0" />
                        </div>
                        <div class="col-md-2">
                            <label for="maxSalary" class="form-label">Max Salary</label>
                            <input type="number" class="form-control" id="maxSalary" name="MaxSalary" value="0" />
                        </div>
                        <div class="col-md-2">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="isActive" name="IsActive" checked />
                                <label class="form-check-label" for="isActive">Active</label>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="d-flex gap-2">
                                <button type="button" class="btn btn-primary" onclick="saveHRGrade()">
                                    <i class="bi bi-check-lg me-1"></i> Save
                                </button>
                                <button type="button" class="btn btn-secondary" onclick="resetForm()">
                                    <i class="bi bi-x-lg me-1"></i> Clear
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

            <!-- Grid Section -->
            <div class="grid-section">
                <div class="grid-section-title">
                    <i class="bi bi-table me-2"></i>HR Grades List
                </div>
                <div class="table-responsive">
                    <table class="table table-hover" id="hrgradesTable">
                        <thead>
                            <tr>
                                <th style="width: 60px;">Sr#</th>
                                <th>Grade Code</th>
                                <th>Grade Name</th>
                                <th class="text-end">Min Salary</th>
                                <th class="text-end">Max Salary</th>
                                <th class="text-center" style="width: 100px;">Status</th>
                                <th class="text-center" style="width: 150px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody id="hrgradesBody">
                            <!-- HR Grades will be loaded dynamically -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const API_BASE = 'http://localhost:5266/api';
        let editingId = 0;

        $(document).ready(function () {
            loadHRGrades();
        });

        async function loadHRGrades() {
            showLoading();
            try {
                const response = await fetch(`${API_BASE}/HRGrade`);
                if (response.ok) {
                    const data = await response.json();
                    renderList(data);
                } else {
                    showAlert('Failed to load HR grades', 'danger');
                }
            } catch (error) {
                console.error('Error loading HR grades:', error);
                showAlert('Error loading HR grades: ' + error.message, 'danger');
            } finally {
                hideLoading();
            }
        }

        function renderList(items) {
            const tbody = $('#hrgradesBody');
            tbody.empty();

            if (items.length === 0) {
                tbody.html('<tr><td colspan="7" class="text-center text-muted py-4">No HR grades found. Add a new grade using the form above.</td></tr>');
                return;
            }

            items.forEach((item, index) => {
                const row = `
                    <tr data-id="${item.id}" class="${editingId === item.id ? 'selected' : ''}">
                        <td>${index + 1}</td>
                        <td><strong>${item.code}</strong></td>
                        <td>${item.name}</td>
                        <td class="text-end">${formatCurrency(item.minSalary)}</td>
                        <td class="text-end">${formatCurrency(item.maxSalary)}</td>
                        <td class="text-center">
                            <span class="badge ${item.isActive ? 'bg-success' : 'bg-secondary'}">
                                ${item.isActive ? 'Active' : 'Inactive'}
                            </span>
                        </td>
                        <td class="text-center">
                            <button type="button" class="btn btn-sm btn-info me-1" onclick="editHRGrade(${item.id})" title="Edit">
                                <i class="bi bi-pencil"></i>
                            </button>
                            <button type="button" class="btn btn-sm btn-danger" onclick="deleteHRGrade(${item.id}, '${item.name}')" title="Delete">
                                <i class="bi bi-trash"></i>
                            </button>
                        </td>
                    </tr>
                `;
                tbody.append(row);
            });
        }

        function formatCurrency(amount) {
            return new Intl.NumberFormat('en-PK', {
                style: 'currency',
                currency: 'PKR',
                minimumFractionDigits: 0
            }).format(amount || 0);
        }

        async function editHRGrade(id) {
            showLoading();
            try {
                const response = await fetch(`${API_BASE}/HRGrade/${id}`);
                if (response.ok) {
                    const data = await response.json();
                    populateForm(data);
                    editingId = id;
                    $('#formTitle').text('Edit HR Grade');

                    $('#hrgradesBody tr').removeClass('selected');
                    $(`#hrgradesBody tr[data-id="${id}"]`).addClass('selected');

                    $('html, body').animate({
                        scrollTop: $('.form-section').offset().top - 100
                    }, 300);
                } else {
                    showAlert('Failed to load HR grade', 'danger');
                }
            } catch (error) {
                console.error('Error loading HR grade:', error);
                showAlert('Error loading HR grade: ' + error.message, 'danger');
            } finally {
                hideLoading();
            }
        }

        async function deleteHRGrade(id, name) {
            if (!confirm(`Are you sure you want to delete "${name}"?`)) {
                return;
            }

            showLoading();
            try {
                const response = await fetch(`${API_BASE}/HRGrade/${id}`, {
                    method: 'DELETE',
                    headers: { 'Content-Type': 'application/json' }
                });

                if (response.ok) {
                    showAlert('HR grade deleted successfully!', 'success');
                    if (editingId === id) {
                        resetForm();
                    }
                    await loadHRGrades();
                } else {
                    const error = await response.json();
                    showAlert(error.message || 'Failed to delete HR grade', 'danger');
                }
            } catch (error) {
                console.error('Error deleting HR grade:', error);
                showAlert('Error deleting HR grade: ' + error.message, 'danger');
            } finally {
                hideLoading();
            }
        }

        function populateForm(data) {
            $('#gradeId').val(data.id);
            $('#code').val(data.code);
            $('#name').val(data.name);
            $('#minSalary').val(data.minSalary);
            $('#maxSalary').val(data.maxSalary);
            $('#isActive').prop('checked', data.isActive);
        }

        function resetForm() {
            $('#gradeId').val('0');
            $('#code').val('');
            $('#name').val('');
            $('#minSalary').val('0');
            $('#maxSalary').val('0');
            $('#isActive').prop('checked', true);
            $('#formTitle').text('Add New HR Grade');
            editingId = 0;
            $('#hrgradesBody tr').removeClass('selected');
        }

        async function saveHRGrade() {
            const code = $('#code').val().trim();
            const name = $('#name').val().trim();

            if (!code || !name) {
                showAlert('Please enter grade code and name', 'danger');
                return;
            }

            const id = parseInt($('#gradeId').val()) || 0;
            const data = {
                Id: id,
                Code: code,
                Name: name,
                MinSalary: parseFloat($('#minSalary').val()) || 0,
                MaxSalary: parseFloat($('#maxSalary').val()) || 0,
                IsActive: $('#isActive').is(':checked')
            };

            showLoading();
            try {
                let response;
                if (id === 0) {
                    response = await fetch(`${API_BASE}/HRGrade`, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(data)
                    });
                } else {
                    response = await fetch(`${API_BASE}/HRGrade/${id}`, {
                        method: 'PUT',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(data)
                    });
                }

                if (response.ok) {
                    showAlert('HR grade saved successfully!', 'success');
                    resetForm();
                    await loadHRGrades();
                } else {
                    const error = await response.json();
                    showAlert(error.message || 'Failed to save HR grade', 'danger');
                }
            } catch (error) {
                console.error('Error saving HR grade:', error);
                showAlert('Error saving HR grade: ' + error.message, 'danger');
            } finally {
                hideLoading();
            }
        }

        function showLoading() {
            $('#loadingOverlay').show();
        }

        function hideLoading() {
            $('#loadingOverlay').hide();
        }

        function showAlert(message, type) {
            const alert = `
                <div class="alert alert-${type} alert-dismissible fade show" role="alert">
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            `;
            $('#alertContainer').html(alert);
            setTimeout(() => {
                $('.alert').alert('close');
            }, 5000);
        }
    </script>
}
