@{
    ViewData["Title"] = "User Management";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<style>
    .card {
        border: none;
        border-radius: 16px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
        margin-bottom: 24px;
    }

    .card-header {
        background: white;
        border-bottom: 1px solid #e2e8f0;
        padding: 20px 24px;
        border-radius: 16px 16px 0 0 !important;
    }

    .card-header h5 {
        margin: 0;
        font-weight: 600;
        color: #1e293b;
    }

    .card-body {
        padding: 24px;
    }

    .form-label {
        font-weight: 500;
        color: #475569;
        margin-bottom: 8px;
        font-size: 14px;
    }

    .form-control, .form-select {
        border: 2px solid #e2e8f0;
        border-radius: 10px;
        padding: 10px 14px;
        font-size: 14px;
        transition: all 0.2s;
    }

    .form-control:focus, .form-select:focus {
        border-color: #008649;
        box-shadow: 0 0 0 4px rgba(0, 134, 73, 0.1);
    }

    .btn-primary {
        background: linear-gradient(135deg, #008649 0%, #006d3b 100%);
        border: none;
        border-radius: 10px;
        padding: 10px 24px;
        font-weight: 600;
        font-size: 14px;
        transition: all 0.2s;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(0, 134, 73, 0.4);
        background: linear-gradient(135deg, #006d3b 0%, #005a30 100%);
    }

    .btn-secondary {
        background: #f1f5f9;
        border: 2px solid #e2e8f0;
        border-radius: 10px;
        padding: 10px 24px;
        font-weight: 600;
        font-size: 14px;
        color: #64748b;
        transition: all 0.2s;
    }

    .btn-secondary:hover {
        background: #e2e8f0;
        border-color: #cbd5e1;
        color: #475569;
    }

    .btn-warning {
        background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
        border: none;
        border-radius: 8px;
        padding: 6px 12px;
        font-weight: 500;
        font-size: 13px;
        color: white;
        transition: all 0.2s;
    }

    .btn-warning:hover {
        transform: translateY(-1px);
        box-shadow: 0 2px 8px rgba(245, 158, 11, 0.4);
        color: white;
    }

    .btn-danger {
        background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        border: none;
        border-radius: 8px;
        padding: 6px 12px;
        font-weight: 500;
        font-size: 13px;
        color: white;
        transition: all 0.2s;
    }

    .btn-danger:hover {
        transform: translateY(-1px);
        box-shadow: 0 2px 8px rgba(239, 68, 68, 0.4);
        color: white;
    }

    .table {
        margin-bottom: 0;
    }

    .table thead th {
        background: #f8fafc;
        border-bottom: 2px solid #e2e8f0;
        padding: 14px 16px;
        font-weight: 600;
        font-size: 13px;
        color: #475569;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .table tbody td {
        padding: 14px 16px;
        vertical-align: middle;
        border-bottom: 1px solid #f1f5f9;
        font-size: 14px;
    }

    .table tbody tr:hover {
        background: #f8fafc;
    }

    .alert {
        border-radius: 12px;
        border: none;
        padding: 16px 20px;
    }

    .alert-success {
        background: #dcfce7;
        color: #166534;
    }

    .alert-danger {
        background: #fee2e2;
        color: #991b1b;
    }

    .select2-container--default .select2-selection--multiple {
        border: 2px solid #e2e8f0;
        border-radius: 10px;
        padding: 6px 10px;
        min-height: 44px;
    }

    .select2-container--default.select2-container--focus .select2-selection--multiple {
        border-color: #008649;
        box-shadow: 0 0 0 4px rgba(0, 134, 73, 0.1);
    }

    .select2-container--default .select2-selection--multiple .select2-selection__choice {
        background: #008649;
        border: none;
        border-radius: 6px;
        color: white;
        padding: 4px 8px;
    }

    .select2-container--default .select2-selection--multiple .select2-selection__choice__remove {
        color: white;
        margin-right: 5px;
    }

    .password-masked {
        font-family: monospace;
        letter-spacing: 2px;
    }

    .badge-role {
        background: #e0f2fe;
        color: #0369a1;
        padding: 4px 10px;
        border-radius: 6px;
        font-size: 12px;
        font-weight: 500;
        margin-right: 4px;
        margin-bottom: 4px;
        display: inline-block;
    }

    .loading-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(255, 255, 255, 0.8);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 100;
        border-radius: 16px;
    }

    .spinner-border {
        width: 3rem;
        height: 3rem;
        border-width: 0.3rem;
    }

    .form-section {
        background: #f8fafc;
        border-radius: 12px;
        padding: 24px;
    }

    .user-list-container {
        max-height: 400px;
        overflow-y: auto;
    }

    .user-list-container::-webkit-scrollbar {
        width: 8px;
    }

    .user-list-container::-webkit-scrollbar-track {
        background: #f1f5f9;
        border-radius: 4px;
    }

    .user-list-container::-webkit-scrollbar-thumb {
        background: #cbd5e1;
        border-radius: 4px;
    }

    .action-buttons {
        white-space: nowrap;
    }

    .action-buttons .btn {
        margin-right: 4px;
    }

    .action-buttons .btn:last-child {
        margin-right: 0;
    }

    .password-toggle {
        cursor: pointer;
        position: absolute;
        right: 12px;
        top: 50%;
        transform: translateY(-50%);
        color: #64748b;
    }

    .password-toggle:hover {
        color: #1e293b;
    }

    .input-group-password {
        position: relative;
    }

    .input-group-password .form-control {
        padding-right: 40px;
    }
</style>

<!-- Include Select2 CSS -->
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" rel="stylesheet" />

<div class="container-fluid">
    <!-- Alert Messages -->
    <div id="alertContainer"></div>

    <!-- User Form Card -->
    <div class="card">
        <div class="card-body position-relative">
            <div id="loadingOverlay" class="loading-overlay" style="display: none;">
                <div class="spinner-border text-success" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>

            <!-- User Form -->
            <form id="userForm">
                <input type="hidden" id="userId" name="Id" value="0" />

                <div class="form-section mb-4">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label for="employeeId" class="form-label">Employee</label>
                            <select class="form-select" id="employeeId" name="EmployeeId">
                                <option value="">-- Select Employee (Optional) --</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label for="userFullName" class="form-label">User Full Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="userFullName" name="UserFullName" placeholder="Enter full name" required />
                        </div>
                        <div class="col-md-6">
                            <label for="userLogin" class="form-label">User Login <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="userLogin" name="UserLogin" placeholder="Enter login username" required />
                        </div>
                        <div class="col-md-6">
                            <label for="userPassword" class="form-label">
                                User Password <span class="text-danger" id="passwordRequired">*</span>
                            </label>
                            <div class="input-group-password">
                                <input type="password" class="form-control" id="userPassword" name="Password" placeholder="Enter password" required />
                                <i class="bi bi-eye password-toggle" onclick="togglePassword()"></i>
                            </div>
                            <small class="text-muted" id="passwordHint" style="display: none;">Leave blank to keep existing password</small>
                        </div>
                        <div class="col-md-12">
                            <label for="userRoles" class="form-label">User Roles <span class="text-danger">*</span></label>
                            <select class="form-select" id="userRoles" name="RoleIds" multiple required>
                                <!-- Roles will be loaded dynamically -->
                            </select>
                        </div>
                    </div>

                    <div class="d-flex gap-2 mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg me-1"></i> Submit
                        </button>
                        <button type="button" class="btn btn-secondary" onclick="cancelForm()">
                            <i class="bi bi-x-lg me-1"></i> Cancel
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- User List Card -->
    <div class="card">
        <div class="card-body">
            <div class="user-list-container">
                <div class="table-responsive">
                    <table class="table table-hover" id="usersTable">
                        <thead>
                            <tr>
                                <th>User Full Name</th>
                                <th>User Login</th>
                                <th>Password</th>
                                <th>User Role</th>
                                <th class="text-center" style="width: 150px;">Action</th>
                            </tr>
                        </thead>
                        <tbody id="usersBody">
                            <!-- Users will be loaded dynamically -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" style="border-radius: 16px; border: none;">
            <div class="modal-header" style="border-bottom: 1px solid #e2e8f0;">
                <h5 class="modal-title" id="deleteModalLabel"><i class="bi bi-exclamation-triangle text-danger me-2"></i>Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete user "<strong id="deleteUserName"></strong>"?</p>
                <p class="text-muted mb-0">This action cannot be undone.</p>
            </div>
            <div class="modal-footer" style="border-top: 1px solid #e2e8f0;">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">
                    <i class="bi bi-trash me-1"></i> Delete
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Include Select2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        //const API_BASE = 'http://localhost:5266/api';
        let deleteUserId = null;

        $(document).ready(function () {
            // Initialize Select2 for multi-select roles
            $('#userRoles').select2({
                theme: 'bootstrap-5',
                placeholder: 'Select roles...',
                allowClear: true,
                width: '100%'
            });

            // Load initial data
            loadEmployees();
            loadRoles();
            loadUsers();

            // Auto-fill name when employee is selected
            $('#employeeId').on('change', function () {
                const selectedOption = $(this).find('option:selected');
                if (selectedOption.val()) {
                    const fullName = selectedOption.text().split(' (')[0];
                    $('#userFullName').val(fullName);
                }
            });
        });

        // Load employees for dropdown
        async function loadEmployees() {
            try {
                const response = await fetch(`${API_BASE}/UsersApi/employees`);
                if (response.ok) {
                    const employees = await response.json();
                    const select = $('#employeeId');
                    select.find('option:not(:first)').remove();
                    employees.forEach(emp => {
                        select.append(`<option value="${emp.id}">${emp.fullName} (${emp.employeeCode})</option>`);
                    });
                }
            } catch (error) {
                console.error('Error loading employees:', error);
            }
        }

        // Load roles for dropdown
        async function loadRoles() {
            try {
                const response = await fetch(`${API_BASE}/UsersApi/roles`);
                if (response.ok) {
                    const roles = await response.json();
                    const select = $('#userRoles');
                    select.empty();
                    roles.forEach(role => {
                        select.append(`<option value="${role.id}">${role.roleName}</option>`);
                    });
                }
            } catch (error) {
                console.error('Error loading roles:', error);
            }
        }

        // Load users list
        async function loadUsers() {
            showLoading();
            try {
                const response = await fetch(`${API_BASE}/UsersApi`);
                if (response.ok) {
                    const users = await response.json();
                    renderUsersTable(users);
                } else {
                    showAlert('Failed to load users', 'danger');
                }
            } catch (error) {
                console.error('Error loading users:', error);
                showAlert('Error loading users: ' + error.message, 'danger');
            } finally {
                hideLoading();
            }
        }

        // Render users table
        function renderUsersTable(users) {
            const tbody = $('#usersBody');
            tbody.empty();

            if (users.length === 0) {
                tbody.html('<tr><td colspan="5" class="text-center text-muted py-4">No users found</td></tr>');
                return;
            }

            users.forEach(user => {
                // Format roles as badges
                const rolesBadges = user.userRoles.split(',')
                    .filter(r => r.trim())
                    .map(role => `<span class="badge-role">${role.trim()}</span>`)
                    .join('');

                const row = `
                    <tr data-user-id="${user.id}">
                        <td><strong>${user.userFullName}</strong></td>
                        <td>${user.userLogin}</td>
                        <td class="password-masked">${user.password}</td>
                        <td>${rolesBadges || '<span class="text-muted">No roles</span>'}</td>
                        <td class="text-center action-buttons">
                            <button type="button" class="btn btn-warning btn-sm" onclick="editUser(${user.id})" title="Edit">
                                <i class="bi bi-pencil"></i> Edit
                            </button>
                            <button type="button" class="btn btn-danger btn-sm" onclick="confirmDelete(${user.id}, '${user.userFullName}')" title="Delete">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </td>
                    </tr>
                `;
                tbody.append(row);
            });
        }

        // Edit user
        async function editUser(userId) {
            showLoading();
            try {
                const response = await fetch(`${API_BASE}/UsersApi/${userId}`);
                if (response.ok) {
                    const user = await response.json();
                    populateForm(user);
                    setEditMode(true);
                    // Scroll to form
                    $('html, body').animate({ scrollTop: 0 }, 'slow');
                } else {
                    showAlert('Failed to load user details', 'danger');
                }
            } catch (error) {
                console.error('Error loading user:', error);
                showAlert('Error loading user: ' + error.message, 'danger');
            } finally {
                hideLoading();
            }
        }

        // Populate form with user data
        function populateForm(user) {
            $('#userId').val(user.id);
            $('#employeeId').val(user.employeeId || '');
            $('#userFullName').val(user.userFullName);
            $('#userLogin').val(user.userLogin);
            $('#userPassword').val('');

            // Set roles using Select2
            $('#userRoles').val(user.roleIds).trigger('change');
        }

        // Set edit mode
        function setEditMode(isEdit) {
            if (isEdit) {
                $('#formMode').text('Edit User').removeClass('bg-primary').addClass('bg-warning');
                $('#passwordRequired').hide();
                $('#passwordHint').show();
                $('#userPassword').prop('required', false);
            } else {
                $('#formMode').text('Add New User').removeClass('bg-warning').addClass('bg-primary');
                $('#passwordRequired').show();
                $('#passwordHint').hide();
                $('#userPassword').prop('required', true);
            }
        }

        // Cancel form
        function cancelForm() {
            $('#userId').val('0');
            $('#employeeId').val('');
            $('#userFullName').val('');
            $('#userLogin').val('');
            $('#userPassword').val('');
            $('#userRoles').val([]).trigger('change');
            setEditMode(false);
            hideAlert();
        }

        // Confirm delete
        function confirmDelete(userId, userName) {
            deleteUserId = userId;
            $('#deleteUserName').text(userName);
            const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }

        // Handle delete confirmation
        $('#confirmDeleteBtn').on('click', async function () {
            if (!deleteUserId) return;

            showLoading();
            try {
                const response = await fetch(`${API_BASE}/UsersApi/${deleteUserId}`, {
                    method: 'DELETE'
                });

                if (response.ok) {
                    bootstrap.Modal.getInstance(document.getElementById('deleteModal')).hide();
                    showAlert('User deleted successfully', 'success');
                    await loadUsers();
                } else {
                    const error = await response.json();
                    showAlert(error.message || 'Failed to delete user', 'danger');
                }
            } catch (error) {
                console.error('Error deleting user:', error);
                showAlert('Error deleting user: ' + error.message, 'danger');
            } finally {
                hideLoading();
                deleteUserId = null;
            }
        });

        // Handle form submission
        $('#userForm').on('submit', async function (e) {
            e.preventDefault();

            const userId = parseInt($('#userId').val()) || 0;
            const selectedRoles = $('#userRoles').val();

            if (!selectedRoles || selectedRoles.length === 0) {
                showAlert('Please select at least one role', 'danger');
                return;
            }

            const data = {
                id: userId,
                employeeId: $('#employeeId').val() ? parseInt($('#employeeId').val()) : null,
                userFullName: $('#userFullName').val().trim(),
                userLogin: $('#userLogin').val().trim(),
                password: $('#userPassword').val(),
                roleIds: selectedRoles.map(id => parseInt(id))
            };

            // For edit mode, password can be empty
            if (userId > 0 && !data.password) {
                delete data.password;
            }

            showLoading();
            try {
                let response;
                if (userId === 0) {
                    // Create new user
                    response = await fetch(`${API_BASE}/UsersApi`, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(data)
                    });
                } else {
                    // Update existing user
                    response = await fetch(`${API_BASE}/UsersApi/${userId}`, {
                        method: 'PUT',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(data)
                    });
                }

                if (response.ok) {
                    showAlert(userId === 0 ? 'User created successfully!' : 'User updated successfully!', 'success');
                    cancelForm();
                    await loadUsers();
                } else {
                    const error = await response.json();
                    showAlert(error.message || 'Failed to save user', 'danger');
                }
            } catch (error) {
                console.error('Error saving user:', error);
                showAlert('Error saving user: ' + error.message, 'danger');
            } finally {
                hideLoading();
            }
        });

        // Toggle password visibility
        function togglePassword() {
            const input = $('#userPassword');
            const icon = $('.password-toggle');
            if (input.attr('type') === 'password') {
                input.attr('type', 'text');
                icon.removeClass('bi-eye').addClass('bi-eye-slash');
            } else {
                input.attr('type', 'password');
                icon.removeClass('bi-eye-slash').addClass('bi-eye');
            }
        }

        // Helper functions
        function showLoading() {
            $('#loadingOverlay').show();
        }

        function hideLoading() {
            $('#loadingOverlay').hide();
        }

        function showAlert(message, type) {
            if (type === 'success') {
                toastSuccess(message);
            } else if (type === 'danger' || type === 'error') {
                toastError(message);
            } else if (type === 'warning') {
                toastWarning(message);
            } else {
                toastInfo(message);
            }
        }

        function hideAlert() {
            $('#alertContainer').empty();
        }
    </script>
}
