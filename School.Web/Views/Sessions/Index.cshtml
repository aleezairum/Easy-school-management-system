@{
    ViewData["Title"] = "Academic Sessions";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<style>
    .card {
        border: none;
        border-radius: 16px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
        margin-bottom: 24px;
    }

    .card-header {
        background: white;
        border-bottom: 1px solid #e2e8f0;
        padding: 20px 24px;
        border-radius: 16px 16px 0 0 !important;
    }

    .card-header h5 {
        margin: 0;
        font-weight: 600;
        color: #1e293b;
    }

    .card-body {
        padding: 24px;
    }

    .form-label {
        font-weight: 500;
        color: #475569;
        margin-bottom: 8px;
        font-size: 14px;
    }

    .form-control, .form-select {
        border: 2px solid #e2e8f0;
        border-radius: 10px;
        padding: 10px 14px;
        font-size: 14px;
        transition: all 0.2s;
    }

    .form-control:focus, .form-select:focus {
        border-color: #008649;
        box-shadow: 0 0 0 4px rgba(0, 134, 73, 0.1);
    }

    .form-check-input {
        width: 18px;
        height: 18px;
        border: 2px solid #cbd5e1;
        border-radius: 4px;
        cursor: pointer;
    }

    .form-check-input:checked {
        background-color: #008649;
        border-color: #008649;
    }

    .form-check-input:focus {
        box-shadow: 0 0 0 4px rgba(0, 134, 73, 0.1);
    }

    .btn-primary {
        background: linear-gradient(135deg, #008649 0%, #006d3b 100%);
        border: none;
        border-radius: 10px;
        padding: 10px 20px;
        font-weight: 600;
        font-size: 14px;
        transition: all 0.2s;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(0, 134, 73, 0.4);
        background: linear-gradient(135deg, #006d3b 0%, #005a30 100%);
    }

    .btn-secondary {
        background: #f1f5f9;
        border: 2px solid #e2e8f0;
        border-radius: 10px;
        padding: 10px 20px;
        font-weight: 600;
        font-size: 14px;
        color: #64748b;
        transition: all 0.2s;
    }

    .btn-secondary:hover {
        background: #e2e8f0;
        border-color: #cbd5e1;
        color: #475569;
    }

    .btn-info {
        background: linear-gradient(135deg, #0ea5e9 0%, #0284c7 100%);
        border: none;
        border-radius: 10px;
        padding: 10px 20px;
        font-weight: 600;
        font-size: 14px;
        color: white;
        transition: all 0.2s;
    }

    .btn-info:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(14, 165, 233, 0.4);
        color: white;
    }

    .btn-warning {
        background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
        border: none;
        border-radius: 10px;
        padding: 10px 20px;
        font-weight: 600;
        font-size: 14px;
        color: white;
        transition: all 0.2s;
    }

    .btn-warning:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(245, 158, 11, 0.4);
        color: white;
    }

    .btn-danger {
        background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        border: none;
        border-radius: 10px;
        padding: 10px 20px;
        font-weight: 600;
        font-size: 14px;
        color: white;
        transition: all 0.2s;
    }

    .btn-danger:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(239, 68, 68, 0.4);
        color: white;
    }

    .btn-success {
        background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
        border: none;
        border-radius: 10px;
        padding: 10px 20px;
        font-weight: 600;
        font-size: 14px;
        color: white;
        transition: all 0.2s;
    }

    .btn-success:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(34, 197, 94, 0.4);
        color: white;
    }

    .table {
        margin-bottom: 0;
    }

    .table thead th {
        background: #f8fafc;
        border-bottom: 2px solid #e2e8f0;
        padding: 14px 16px;
        font-weight: 600;
        font-size: 13px;
        color: #475569;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        white-space: nowrap;
    }

    .table tbody td {
        padding: 12px 16px;
        vertical-align: middle;
        border-bottom: 1px solid #f1f5f9;
        font-size: 14px;
    }

    .table tbody tr:hover {
        background: #f8fafc;
    }

    .table tbody tr.selected {
        background: #ecfdf5;
        border-left: 3px solid #008649;
    }

    .alert {
        border-radius: 12px;
        border: none;
        padding: 16px 20px;
    }

    .alert-success {
        background: #dcfce7;
        color: #166534;
    }

    .alert-danger {
        background: #fee2e2;
        color: #991b1b;
    }

    .alert-warning {
        background: #fef3c7;
        color: #92400e;
    }

    .loading-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(255, 255, 255, 0.8);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 100;
        border-radius: 16px;
    }

    .spinner-border {
        width: 3rem;
        height: 3rem;
        border-width: 0.3rem;
    }

    .form-section {
        background: #f8fafc;
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 20px;
    }

    .form-section-title {
        font-size: 14px;
        font-weight: 600;
        color: #64748b;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 16px;
        padding-bottom: 8px;
        border-bottom: 2px solid #e2e8f0;
    }

    .grid-section {
        margin-top: 24px;
    }

    .grid-section-title {
        font-size: 14px;
        font-weight: 600;
        color: #64748b;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 16px;
        padding-bottom: 8px;
        border-bottom: 2px solid #e2e8f0;
    }
</style>

<div class="container-fluid">
    <!-- Alert Messages -->
    <div id="alertContainer"></div>

    <!-- Sessions Card -->
    <div class="card">
        <div class="card-header">
            <h5><i class="bi bi-calendar-range me-2"></i>Academic Sessions</h5>
        </div>
        <div class="card-body position-relative">
            <div id="loadingOverlay" class="loading-overlay" style="display: none;">
                <div class="spinner-border text-success" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>

            <!-- Form Section -->
            <div class="form-section">
                <div class="form-section-title">
                    <i class="bi bi-pencil-square me-2"></i><span id="formTitle">Add New Session</span>
                </div>
                <form id="sessionForm">
                    <input type="hidden" id="sessionId" name="Id" value="0" />

                    <div class="row g-3 align-items-end">
                        <div class="col-md-2">
                            <label for="sessionName" class="form-label">Session Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="sessionName" name="SessionName"
                                   placeholder="e.g., 2024-2025" required />
                        </div>
                        <div class="col-md-2">
                            <label for="startDate" class="form-label">Start Date <span class="text-danger">*</span></label>
                            <input type="date" class="form-control" id="startDate" name="StartDate" required />
                        </div>
                        <div class="col-md-2">
                            <label for="endDate" class="form-label">End Date <span class="text-danger">*</span></label>
                            <input type="date" class="form-control" id="endDate" name="EndDate" required />
                        </div>
                        <div class="col-md-3">
                            <div class="d-flex gap-4">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="isCurrent" name="IsCurrent" />
                                    <label class="form-check-label" for="isCurrent">Current</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="isActive" name="IsActive" checked />
                                    <label class="form-check-label" for="isActive">Active</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="d-flex gap-2">
                                <button type="button" class="btn btn-primary" onclick="saveSession()">
                                    <i class="bi bi-check-lg me-1"></i> Save
                                </button>
                                <button type="button" class="btn btn-secondary" onclick="resetForm()">
                                    <i class="bi bi-x-lg me-1"></i> Clear
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

            <!-- Grid Section -->
            <div class="grid-section">
                <div class="grid-section-title">
                    <i class="bi bi-table me-2"></i>Sessions List
                </div>
                <div class="table-responsive">
                    <table class="table table-hover" id="sessionsTable">
                        <thead>
                            <tr>
                                <th style="width: 60px;">Sr#</th>
                                <th>Session Name</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th class="text-center" style="width: 100px;">Current</th>
                                <th class="text-center" style="width: 100px;">Status</th>
                                <th class="text-center" style="width: 200px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody id="sessionsBody">
                            <!-- Sessions will be loaded dynamically -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const API_BASE = 'http://localhost:5266/api';
        let editingSessionId = 0;

        $(document).ready(function () {
            loadSessions();
        });

        // Load all sessions
        async function loadSessions() {
            showLoading();
            try {
                const response = await fetch(`${API_BASE}/AcademicSessionYear`);
                if (response.ok) {

                    const sessions = await response.json();
                    renderSessionsList(sessions);
                } else {
                    showAlert('Failed to load sessions', 'danger');
                }
            } catch (error) {
                console.error('Error loading sessions:', error);
                showAlert('Error loading sessions: ' + error.message, 'danger');
            } finally {
                hideLoading();
            }
        }

        // Render sessions list table
        function renderSessionsList(sessions) {
            const tbody = $('#sessionsBody');
            tbody.empty();

            if (sessions.length === 0) {
                tbody.html('<tr><td colspan="7" class="text-center text-muted py-4">No sessions found. Add a new session using the form above.</td></tr>');
                return;
            }
           sessions.forEach((session, index) => {
                const row = `
                    <tr data-id="${session.vid}" class="${editingSessionId === session.vid ? 'selected' : ''}">
                        <td>${index + 1}</td>
                        <td>
                            <strong>${session.vName}</strong>
                            ${session.IsCurrent ? '<span class="badge bg-success ms-2">Current</span>' : ''}
                        </td>
                        <td>${formatDate(session.dateFrom)}</td>
                        <td>${formatDate(session.dateTo)}</td>
                        <td class="text-center">
                            ${session.isCurrent
                                ? '<i class="bi bi-check-circle-fill text-success fs-5"></i>'
                                : '<i class="bi bi-circle text-muted"></i>'}
                        </td>
                        <td class="text-center">
                            <span class="badge ${session.isActive ? 'bg-success' : 'bg-secondary'}">
                                ${session.isActive ? 'Active' : 'Inactive'}
                            </span>
                        </td>
                        <td class="text-center">
                            ${!session.isCurrent && session.isActive ? `
                                <button type="button" class="btn btn-sm btn-success me-1" onclick="setCurrentSession(${session.vid}, '${session.vName}', '${session.dateFrom}', '${session.dateTo}', '${session.isActive}')" title="Set as Current">
                                    <i class="bi bi-check2-circle"></i>
                                </button>
                            ` : ''}
                            <button type="button" class="btn btn-sm btn-info me-1" onclick="editSession(${session.vid})" title="Edit">
                                <i class="bi bi-pencil"></i>
                            </button>
                            ${!session.isActive ? `
                                <button type="button" class="btn btn-sm btn-danger" onclick="deleteSession(${session.vid}, '${session.vName}')" title="Delete">
                                    <i class="bi bi-trash"></i>
                                </button>
                            ` : ''}
                        </td>
                    </tr>
                `;
                tbody.append(row);
            });
        }

        // Format date for display
        function formatDate(dateString) {
            const date = new Date(dateString);
            return date.toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'short',
                day: 'numeric'
            });
        }

        // Format date for input field
        function formatDateForInput(dateString) {
            const date = new Date(dateString);
            date.setMinutes(date.getMinutes() - date.getTimezoneOffset());
            return date.toISOString().split('T')[0];
        }


        // Edit existing session
        async function editSession(sessionId) {
            showLoading();
            try {
                const response = await fetch(`${API_BASE}/AcademicSessionYear/${sessionId}`);
                if (response.ok) {
                    const data = await response.json();
                    populateForm(data);
                    editingSessionId = sessionId;
                    $('#formTitle').text('Edit Session');

                    // Highlight the selected row
                    $('#sessionsBody tr').removeClass('selected');
                    $(`#sessionsBody tr[data-id="${sessionId}"]`).addClass('selected');

                    // Scroll to form
                    $('html, body').animate({
                        scrollTop: $('.form-section').offset().top - 100
                    }, 300);
                } else {
                    showAlert('Failed to load session', 'danger');
                }
            } catch (error) {
                console.error('Error loading session:', error);
                showAlert('Error loading session: ' + error.message, 'danger');
            } finally {
                hideLoading();
            }
        }

        // Set session as current
        async function setCurrentSession(sessionId, sessionName, dateFrom, dateTo, isActive) {
            if (!confirm('Are you sure you want to set this session as the current session?')) {
                return;
            }

            debugger;
            const data = {
                VID: sessionId,
                VName: sessionName,
                DateFrom: dateFrom,
                DateTo: dateTo,
                IsCurrent: true,
                IsActive: isActive == "true"
            };

            showLoading();
            try {
                let response;
                response = await fetch(`${API_BASE}/AcademicSessionYear`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify(data)
                    });

                if (response.ok) {
                    showAlert('Session set as current successfully!', 'success');
                    await loadSessions();
                } else {
                    const error = await response.json();
                    showAlert(error.message || 'Failed to set current session', 'danger');
                }
            } catch (error) {
                console.error('Error saving session:', error);
                showAlert('Error saving session: ' + error.message, 'danger');
            } finally {
                hideLoading();
            }
            
        }

        // Delete session
        async function deleteSession(sessionId, sessionName) {
            if (!confirm(`Are you sure you want to delete the session "${sessionName}"?`)) {
                return;
            }

            showLoading();
            try {
                const response = await fetch(`${API_BASE}/AcademicSessionYear/${sessionId}`, {
                    method: 'DELETE',
                        headers: {
                            'Content-Type': 'application/json'
                        }
                });

                if (response.ok) {
                    showAlert('Session deleted successfully!', 'success');

                    // If deleting the session being edited, reset the form
                    if (editingSessionId === sessionId) {
                        resetForm();
                    }

                    await loadSessions();
                } else {
                    const error = await response.json();
                    showAlert(error.message || 'Failed to delete session', 'danger');
                }
            } catch (error) {
                console.error('Error deleting session:', error);
                showAlert('Error deleting session: ' + error.message, 'danger');
            } finally {
                hideLoading();
            }
        }

        // Populate form with session data
        function populateForm(data) {
            $('#sessionId').val(data.vid);
            $('#sessionName').val(data.vName);
            $('#startDate').val(formatDateForInput(data.dateFrom));
            $('#endDate').val(formatDateForInput(data.dateTo));
            $('#isCurrent').prop('checked', data.isCurrent);
            $('#isActive').prop('checked', data.isActive);
        }

        // Reset form
        function resetForm() {
            $('#sessionId').val('0');
            $('#sessionName').val('');
            $('#startDate').val('');
            $('#endDate').val('');
            $('#isCurrent').prop('checked', false);
            $('#isActive').prop('checked', true);
            $('#formTitle').text('Add New Session');
            editingSessionId = 0;

            // Remove selected highlight from table
            $('#sessionsBody tr').removeClass('selected');
        }

        // Save session
        async function saveSession() {
            const sessionName = $('#sessionName').val().trim();
            const startDate = $('#startDate').val();
            const endDate = $('#endDate').val();

            if (!sessionName) {
                showAlert('Please enter a session name', 'danger');
                return;
            }

            if (!startDate || !endDate) {
                showAlert('Please enter both start and end dates', 'danger');
                return;
            }

            if (new Date(endDate) <= new Date(startDate)) {
                showAlert('End date must be after start date', 'danger');
                return;
            }

            const sessionId = parseInt($('#sessionId').val()) || 0;
            const data = {
                VID: sessionId,
                VName: sessionName,
                DateFrom: startDate,
                DateTo: endDate,
                IsCurrent: $('#isCurrent').is(':checked'),
                IsActive: $('#isActive').is(':checked')
            };

            showLoading();
            try {
                let response;
                response = await fetch(`${API_BASE}/AcademicSessionYear`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify(data)
                    });
               
                if (response.ok) {
                    showAlert('Session saved successfully!', 'success');
                    resetForm();
                    await loadSessions();
                } else {
                    const error = await response.json();
                    showAlert(error.message || 'Failed to save session', 'danger');
                }
            } catch (error) {
                console.error('Error saving session:', error);
                showAlert('Error saving session: ' + error.message, 'danger');
            } finally {
                hideLoading();
            }
        }

        // Helper functions
        function showLoading() {
            $('#loadingOverlay').show();
        }

        function hideLoading() {
            $('#loadingOverlay').hide();
        }

        function showAlert(message, type) {
            const alert = `
                <div class="alert alert-${type} alert-dismissible fade show" role="alert">
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            `;
            $('#alertContainer').html(alert);

            // Auto-hide after 5 seconds
            setTimeout(() => {
                $('.alert').alert('close');
            }, 5000);
        }
    </script>
}
